---
export interface Props {
  problem: string;
  action: string;
  result: string;
  users: string;
  link?: string;
  linkText?: string;
  icon?: 'coral' | 'kelp' | 'fish' | 'data' | 'policy';
}

const { problem, action, result, users, link, linkText = 'Learn more', icon = 'data' } = Astro.props;

const icons = {
  coral: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v4m0 0c-2 0-4 2-4 4s2 4 2 6c0 1-1 2-2 3m4-13c2 0 4 2 4 4s-2 4-2 6c0 1 1 2 2 3m-4-13c0 2 0 4-2 6m2-6c0 2 0 4 2 6" />`,
  kelp: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3c0 3-2 5-2 8s2 5 2 8m0-16c0 3 2 5 2 8s-2 5-2 8m-4-12c1 2 3 3 4 3m-4 6c1-2 3-3 4-3m4-6c-1 2-3 3-4 3m4 6c-1-2-3-3-4-3" />`,
  fish: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 12c-2.5 4-6 6-10 6s-5-2-7-3c2-1 3-3 7-3s7.5 2 10 0zm-14-1a1 1 0 100-2 1 1 0 000 2z" />`,
  data: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  policy: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
};
---

<div class="case-study-card">
  <div class="case-icon">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[icon]} />
  </div>

  <div class="case-content">
    <div class="case-row">
      <span class="case-label">Challenge</span>
      <p class="case-text">{problem}</p>
    </div>

    <div class="case-row">
      <span class="case-label">Our approach</span>
      <p class="case-text">{action}</p>
    </div>

    <div class="case-row case-result">
      <span class="case-label">Result</span>
      <p class="case-text">{result}</p>
    </div>

    <div class="case-footer">
      <span class="case-users">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>Used by: {users}</span>
      </span>
      {link && (
        <a href={link} class="case-link">
          {linkText}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .case-study-card {
    @apply bg-surface-card border border-line rounded-2xl p-6;
    @apply transition-all duration-300;
  }

  .case-study-card:hover {
    @apply -translate-y-1;
    border-color: rgba(56, 189, 248, 0.4);
    box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.3);
  }

  .case-icon {
    @apply w-12 h-12 rounded-xl bg-accent/20 text-accent;
    @apply flex items-center justify-center mb-5;
  }

  .case-content {
    @apply space-y-4;
  }

  .case-row {
    @apply pb-4 border-b border-line/50;
  }

  .case-row:last-of-type {
    @apply border-b-0 pb-0;
  }

  .case-label {
    @apply text-xs font-bold uppercase tracking-wider text-muted mb-1 block;
  }

  .case-text {
    @apply text-sm text-ink leading-relaxed m-0;
  }

  .case-result .case-text {
    @apply text-accent-2 font-semibold;
  }

  .case-footer {
    @apply flex items-center justify-between pt-4 border-t border-line/50 mt-4;
  }

  .case-users {
    @apply flex items-center gap-2 text-xs text-muted;
  }

  .case-link {
    @apply inline-flex items-center gap-1.5 text-sm font-semibold text-accent;
    @apply transition-all duration-200 no-underline;
  }

  .case-link:hover {
    @apply gap-2.5;
  }
</style>
