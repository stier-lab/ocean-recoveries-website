---
/**
 * BreadcrumbList Schema (JSON-LD)
 * Provides navigation structure to search engines
 * Schema.org: https://schema.org/BreadcrumbList
 */

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Always include home as the first item
const breadcrumbItems = [
  { name: "Home", url: "https://www.oceanrecoveries.com/" },
  ...items.map(item => ({
    name: item.name,
    url: item.url.startsWith('http') ? item.url : `https://www.oceanrecoveries.com${item.url}`
  }))
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
