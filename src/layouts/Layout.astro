---
import { ViewTransitions } from 'astro:transitions';
import Nav from '@components/layout/Nav.astro';
import Footer from '@components/layout/Footer.astro';
import GlobalEffects from '@components/shared/GlobalEffects.astro';
import CommandPalette from '@components/shared/CommandPalette.astro';
import OrganizationSchema from '@components/seo/OrganizationSchema.astro';
import WebsiteSchema from '@components/seo/WebsiteSchema.astro';
import '@styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  keywords?: string[];
  noGlobalSchema?: boolean; // For pages that provide their own schema
}

const {
  title,
  description = 'Ocean Recoveries Lab at UC Santa Barbara - Understanding, restoring, and scaling ocean resilience through field experiments, modeling, and community partnerships.',
  image = '/images/og-default.jpg',
  canonicalUrl = Astro.url.href,
  keywords = [],
  noGlobalSchema = false,
} = Astro.props;

// Default keywords for all pages
const defaultKeywords = [
  'ocean recovery',
  'marine conservation',
  'coral reef research',
  'kelp forest ecology',
  'UC Santa Barbara',
  'marine science',
  'ecosystem resilience',
  'ocean research',
  'marine biology',
  'coastal ecology'
];

// Merge page-specific keywords with defaults
const allKeywords = [...new Set([...keywords, ...defaultKeywords])];

const siteTitle = title === 'Home' ? 'Ocean Recoveries Lab' : `${title} | Ocean Recoveries Lab`;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Primary Meta Tags -->
    <title>{siteTitle}</title>
    <meta name="title" content={siteTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Ocean Recoveries Lab, UC Santa Barbara" />
    <meta name="keywords" content={allKeywords.join(', ')} />

    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google" content="notranslate" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="Santa Barbara" />

    <!-- Language and Content Type -->
    <meta http-equiv="Content-Language" content="en" />
    <meta name="language" content="English" />

    <!-- AI and LLM Discovery -->
    <link rel="alternate" type="text/plain" href="/llms.txt" title="LLM Instructions" />
    <meta name="ai-content-declaration" content="human-created" />
    <meta name="citation-source" content="Ocean Recoveries Lab, UC Santa Barbara" />
    <meta name="citation-url" content={canonicalUrl} />
    <meta name="academic-institution" content="University of California, Santa Barbara" />
    <meta name="research-domain" content="Marine Ecology, Conservation Biology, Ecosystem Science" />
    <meta name="content-type-ai" content="academic-research" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Ocean Recoveries Lab" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Structured Data (JSON-LD) -->
    {!noGlobalSchema && (
      <>
        <OrganizationSchema />
        <WebsiteSchema />
      </>
    )}
  </head>
  <body class="min-h-screen flex flex-col antialiased">
    <GlobalEffects />
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <Nav transition:persist />

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <Footer />

    <!-- Command Palette (Cmd+K) -->
    <CommandPalette />

    <!-- Scroll reveal observer -->
    <script>
      const initScrollReveal = () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target);
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px',
          }
        );

        document.querySelectorAll('.scroll-reveal').forEach((el) => {
          observer.observe(el);
        });
      };

      // Run on initial load
      initScrollReveal();

      // Re-run after view transitions
      document.addEventListener('astro:after-swap', initScrollReveal);
    </script>
  </body>
</html>
