---
import Layout from '@layouts/Layout.astro';
import WaveDivider from '@components/shared/WaveDivider.astro';
import StudySitesMap from '@components/research/StudySitesMap';
import { posts } from '@data/posts';

// Get 3 most recent news posts
const recentPosts = [...posts]
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 3);

// Format date helper
const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
};
---

<Layout
  title="Ocean Recoveries Lab | Engineering Resilience from Organisms to Ecosystems"
  description="Research lab at UC Santa Barbara studying coral reef and kelp forest resilience. We trace the mechanisms of resistance, recovery, and reorganization to make restoration predictable."
  keywords={['Ocean Recoveries Lab', 'coral reef research', 'kelp forest ecology', 'marine conservation', 'UC Santa Barbara', 'Adrian Stier', 'ecosystem resilience']}
>
  <!-- Hero Section - Scientific Editorial Style -->
  <section class="hero">
    <div class="hero-media">
      <div class="hero-image" style="background-image: url('/images/coral-reef-panorama-anthias-fish.jpeg');"></div>
      <div class="hero-overlay"></div>
      <div class="hero-grain"></div>
    </div>


    <div class="hero-content">
      <div class="container">
        <!-- Editorial masthead -->
        <div class="hero-masthead scroll-reveal">
          <div class="masthead-line"></div>
          <span class="masthead-text">UC Santa Barbara</span>
          <div class="masthead-line"></div>
        </div>

        <!-- Main title - dramatic editorial treatment -->
        <div class="hero-title-block">
          <h1 class="hero-title scroll-reveal stagger-1">
            <span class="title-line title-line-1">Ocean</span>
            <span class="title-line title-line-2">
              <span class="title-serif">Recoveries</span>
            </span>
            <span class="title-line title-line-3">Lab</span>
          </h1>
        </div>

        <!-- Tagline with editorial flourish -->
        <div class="hero-tagline-wrapper scroll-reveal stagger-2">
          <div class="tagline-accent"></div>
          <p class="hero-tagline">
            Understanding <em>collapse</em>.<br />
            Designing <em>recovery</em>.
          </p>
        </div>

        <!-- Value proposition -->
        <p class="hero-desc scroll-reveal stagger-3">
          We identify why ecosystems fail and what makes restoration succeed—building decision tools managers can use.
        </p>

        <!-- Actions row -->
        <div class="hero-actions scroll-reveal stagger-4">
          <a href="/research" class="btn-editorial-primary">
            <span class="btn-text">Explore Our Research</span>
            <span class="btn-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </a>
          <a href="/join-us" class="btn-editorial-secondary">Join the Lab</a>
        </div>

        <!-- Quick access cards -->
        <div class="hero-quick-access scroll-reveal stagger-5">
          <a href="/for-funders" class="quick-card">
            <span class="quick-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            <span class="quick-label">For Funders</span>
          </a>
          <a href="/join-us" class="quick-card">
            <span class="quick-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </span>
            <span class="quick-label">For Students</span>
          </a>
          <a href="mailto:adrian.stier@lifesci.ucsb.edu?subject=Partnership%20Inquiry" class="quick-card">
            <span class="quick-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </span>
            <span class="quick-label">For Partners</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll cue -->
    <div class="scroll-cue">
      <div class="scroll-cue-line"></div>
      <span class="scroll-cue-text">Scroll to explore</span>
    </div>

    <WaveDivider id="hero-wave" fillColor="surface" />
  </section>

  <!-- Study Systems Section - Editorial Cards -->
  <section id="study-systems" class="study-systems">
    <div class="container">
      <!-- Section header with editorial treatment -->
      <div class="section-header-editorial scroll-reveal">
        <div class="header-rule"></div>
        <div class="header-content">
          <span class="section-number">01</span>
          <div class="header-text">
            <span class="section-eyebrow">Research Focus</span>
            <h2 class="section-title-editorial">
              Two Systems,<br />
              <span class="title-serif-accent">Two Failure Modes</span>
            </h2>
          </div>
        </div>
        <p class="section-desc-editorial">
          Kelp forests and coral reefs fail in fundamentally different ways. Comparing how they break reveals which mechanisms generalize—and which interventions transfer.
        </p>
      </div>

      <!-- Interactive Map -->
      <div class="map-container scroll-reveal">
        <StudySitesMap client:load />
      </div>

      <!-- Study System Cards - Magazine Layout -->
      <div class="systems-magazine">
        <!-- Coral Reefs - Feature Card -->
        <a href="/research/coral-reefs" class="system-feature system-feature-coral scroll-reveal stagger-1">
          <div class="feature-image">
            <img src="/images/cauliflower-coral-damselfish-reef.jpeg" alt="Coral reef ecosystem in Mo'orea" loading="lazy" />
            <div class="feature-overlay"></div>
          </div>
          <div class="feature-content">
            <div class="feature-meta">
              <span class="feature-location">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                Mo'orea, French Polynesia
              </span>
              <span class="feature-badge feature-badge-coral">Slow & chronic</span>
            </div>
            <h3 class="feature-title">Coral Reefs</h3>
            <p class="feature-excerpt">
              From wound healing at the colony level to regeneration capacity and individual-to-population recovery dynamics.
            </p>
            <div class="feature-cta">
              <span>Explore research</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
          <div class="feature-accent"></div>
        </a>

        <!-- Kelp Forests - Feature Card -->
        <a href="/research/kelp-forests" class="system-feature system-feature-kelp scroll-reveal stagger-2">
          <div class="feature-image">
            <img src="/images/giant-kelp-sunlight-underwater.jpeg" alt="Kelp forest ecosystem in Santa Barbara" loading="lazy" />
            <div class="feature-overlay"></div>
          </div>
          <div class="feature-content">
            <div class="feature-meta">
              <span class="feature-location">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                Santa Barbara, California
              </span>
              <span class="feature-badge feature-badge-kelp">Fast & nonlinear</span>
            </div>
            <h3 class="feature-title">Kelp Forests</h3>
            <p class="feature-excerpt">
              Consumer–predator feedbacks, tipping point dynamics, and breaking alternative stable states in temperate marine systems.
            </p>
            <div class="feature-cta">
              <span>Explore research</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
          <div class="feature-accent"></div>
        </a>
      </div>
    </div>

    <WaveDivider id="study-wave" fillColor="navy-deep" />
  </section>

  <!-- Impact Quote Banner - Editorial Pull Quote -->
  <section class="quote-banner">
    <div class="quote-bg">
      <div class="quote-pattern"></div>
    </div>
    <div class="container">
      <div class="quote-block scroll-reveal">
        <div class="quote-marks">"</div>
        <blockquote class="quote-text">
          Understanding why ecosystems collapse—and what makes them recover—is the first step toward restoration that actually works.
        </blockquote>
        <cite class="quote-citation">
          <img src="/images/adrian.png" alt="Adrian Stier" class="quote-avatar" />
          <div class="quote-author">
            <span class="author-name">Dr. Adrian Stier</span>
            <span class="author-title">Principal Investigator</span>
          </div>
        </cite>
      </div>
    </div>
  </section>

  <!-- Resilience Framework Section - Scientific Diagram Style -->
  <section class="framework-section">
    <div class="framework-bg">
      <div class="framework-grid-pattern"></div>
      <div class="framework-orb framework-orb-1"></div>
      <div class="framework-orb framework-orb-2"></div>
    </div>

    <div class="container relative z-10">
      <div class="section-header-editorial scroll-reveal">
        <div class="header-rule header-rule-light"></div>
        <div class="header-content">
          <span class="section-number section-number-light">02</span>
          <div class="header-text">
            <span class="section-eyebrow section-eyebrow-light">Our Framework</span>
            <h2 class="section-title-editorial section-title-light">
              Resilience<br />
              <span class="title-serif-accent">Across Scales</span>
            </h2>
          </div>
        </div>
        <p class="section-desc-editorial section-desc-light">
          Resilience isn't something ecosystems "have." It emerges from processes at multiple levels—and these levels connect.
        </p>
      </div>

      <!-- Three Pillars - Scientific Cards -->
      <div class="pillars-scientific">
        <!-- Resistance -->
        <div class="pillar-scientific scroll-reveal stagger-1">
          <div class="pillar-number">R1</div>
          <div class="pillar-icon-wrap pillar-icon-resistance">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="pillar-name">Resistance</h3>
          <p class="pillar-definition">What prevents collapse when disturbance hits</p>
          <div class="pillar-scales-list">
            <div class="scale-row">
              <span class="scale-level">Individual</span>
              <span class="scale-mechanism">stress tolerance</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Population</span>
              <span class="scale-mechanism">spatial refugia</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Ecosystem</span>
              <span class="scale-mechanism">trophic structure</span>
            </div>
          </div>
        </div>

        <!-- Recovery -->
        <div class="pillar-scientific pillar-featured scroll-reveal stagger-2">
          <div class="pillar-number">R2</div>
          <div class="pillar-icon-wrap pillar-icon-recovery">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <h3 class="pillar-name">Recovery</h3>
          <p class="pillar-definition">What controls the speed and reliability of return</p>
          <div class="pillar-scales-list">
            <div class="scale-row">
              <span class="scale-level">Individual</span>
              <span class="scale-mechanism">wound healing</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Population</span>
              <span class="scale-mechanism">recruitment</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Ecosystem</span>
              <span class="scale-mechanism">succession</span>
            </div>
          </div>
        </div>

        <!-- Reorganization -->
        <div class="pillar-scientific scroll-reveal stagger-3">
          <div class="pillar-number">R3</div>
          <div class="pillar-icon-wrap pillar-icon-reorg">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
          <h3 class="pillar-name">Reorganization</h3>
          <p class="pillar-definition">What determines the next state when return isn't possible</p>
          <div class="pillar-scales-list">
            <div class="scale-row">
              <span class="scale-level">Individual</span>
              <span class="scale-mechanism">survivor filtering</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Population</span>
              <span class="scale-mechanism">reassembly</span>
            </div>
            <div class="scale-row">
              <span class="scale-level">Ecosystem</span>
              <span class="scale-mechanism">rewiring</span>
            </div>
          </div>
        </div>
      </div>

      <div class="framework-cta scroll-reveal">
        <a href="/research" class="btn-outline-editorial">
          <span>Learn how we do science</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>

    <WaveDivider id="pillars-wave" fillColor="surface" />
  </section>

  <!-- Collaboration Band -->
  <section class="collab-section">
    <div class="container">
      <div class="collab-card scroll-reveal">
        <div class="collab-content">
          <span class="collab-eyebrow">Collaborate</span>
          <h2 class="collab-title">
            Work With <span class="title-serif-inline">Our Lab</span>
          </h2>
          <div class="collab-benefits">
            <div class="benefit">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong>Funding</strong> for conservation science</span>
            </div>
            <div class="benefit">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <span><strong>Mentorship</strong> at all career stages</span>
            </div>
            <div class="benefit">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong>Field Sites</strong> in Mo'orea & Santa Barbara</span>
            </div>
          </div>
        </div>
        <div class="collab-actions">
          <a href="/join-us" class="btn-collab-primary">
            <span>Join the Lab</span>
            <span class="btn-sub">Open positions</span>
          </a>
          <a href="/for-funders" class="btn-collab-secondary">Partner With Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Focal Organisms Section -->
  <section class="organisms-section">
    <div class="container">
      <div class="section-header-editorial scroll-reveal">
        <div class="header-rule"></div>
        <div class="header-content">
          <span class="section-number">03</span>
          <div class="header-text">
            <span class="section-eyebrow">What We Study</span>
            <h2 class="section-title-editorial">
              Focal Organisms<br />
              <span class="title-serif-accent">& Scales</span>
            </h2>
          </div>
        </div>
        <p class="section-desc-editorial">
          From cellular mechanisms of coral healing to ecosystem consequences of predator loss.
        </p>
      </div>

      <div class="organisms-mosaic">
        <!-- Corals -->
        <div class="organism-tile organism-tile-large scroll-reveal stagger-1">
          <div class="tile-image">
            <img src="/images/chromis-acropora.jpeg" alt="Coral colony" loading="lazy" />
          </div>
          <div class="tile-content">
            <h3 class="tile-name">Corals</h3>
            <div class="tile-tags">
              <span>Wound healing</span>
              <span>Thermal stress</span>
            </div>
          </div>
        </div>

        <!-- Lobsters & Urchins -->
        <div class="organism-tile scroll-reveal stagger-2">
          <div class="tile-image">
            <img src="/images/lobster.jpeg" alt="Spiny lobster" loading="lazy" />
          </div>
          <div class="tile-content">
            <h3 class="tile-name">Lobsters & Urchins</h3>
            <div class="tile-tags">
              <span>Predation</span>
              <span>Grazing</span>
            </div>
          </div>
        </div>

        <!-- Kelp -->
        <div class="organism-tile scroll-reveal stagger-3">
          <div class="tile-image">
            <img src="/images/kelp-hero.jpeg" alt="Giant kelp" loading="lazy" />
          </div>
          <div class="tile-content">
            <h3 class="tile-name">Kelp</h3>
            <div class="tile-tags">
              <span>Storm resistance</span>
              <span>Recruitment</span>
            </div>
          </div>
        </div>

        <!-- Reef Fish -->
        <div class="organism-tile scroll-reveal stagger-4">
          <div class="tile-image">
            <img src="/images/damselfish-pair-acropora-coral.jpeg" alt="Reef fish" loading="lazy" />
          </div>
          <div class="tile-content">
            <h3 class="tile-name">Reef Fish</h3>
            <div class="tile-tags">
              <span>Mutualisms</span>
              <span>Networks</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <WaveDivider id="organisms-wave" fillColor="navy-deep" />
  </section>

  <!-- Recent News Section -->
  <section class="news-section">
    <div class="news-bg">
      <div class="news-gradient-overlay"></div>
    </div>

    <div class="container relative z-10">
      <div class="news-header scroll-reveal">
        <div class="news-header-text">
          <span class="section-eyebrow section-eyebrow-light">Latest</span>
          <h2 class="section-title-editorial section-title-light">Recent Research</h2>
        </div>
        <a href="/news" class="btn-outline-editorial hidden sm:inline-flex">
          <span>View all news</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <div class="news-editorial-grid">
        {recentPosts.map((post, i) => (
          <article class={`news-editorial-card ${i === 0 ? 'news-featured' : ''} scroll-reveal stagger-${i + 1}`}>
            <a href={`/news/${post.slug}`} class="news-editorial-link">
              <div class="news-editorial-image">
                <img src={post.featuredImage} alt={post.title} loading={i === 0 ? 'eager' : 'lazy'} />
                <div class="news-image-overlay"></div>
              </div>
              <div class="news-editorial-body">
                <div class="news-meta">
                  <time class="news-date">{formatDate(post.date)}</time>
                  <span class="news-category">{post.tags[0]}</span>
                </div>
                <h3 class="news-editorial-title">{post.title}</h3>
                {i === 0 && <p class="news-editorial-excerpt">{post.excerpt}</p>}
                <span class="news-read-more">
                  Read article
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>

      <div class="news-mobile-link scroll-reveal sm:hidden">
        <a href="/news" class="btn-outline-editorial">View All News</a>
      </div>
    </div>

    <WaveDivider id="news-wave" fillColor="surface" />
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="about-editorial">
        <div class="about-content scroll-reveal">
          <span class="section-eyebrow">Our Lab</span>
          <h2 class="section-title-editorial">
            Based at<br />
            <span class="title-serif-accent">UC Santa Barbara</span>
