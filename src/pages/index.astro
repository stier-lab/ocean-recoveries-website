---
import Layout from '@layouts/Layout.astro';
import { posts } from '@data/posts';
import { studySystems, researchPillars } from '@data/research';

// Get 3 most recent news posts for carousel
const recentPosts = [...posts]
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 3);

// Format date helper
const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] md:min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Parallax -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat parallax-bg"
      style="background-image: url('/images/coral-reef-panorama-anthias-fish.jpeg');"
    >
      <!-- Stronger Gradient Overlay for better text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-bg-primary/70 via-bg-primary/50 to-bg-primary/85"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 container text-center text-white px-4 py-16 md:py-20">
      <h1 class="hero-title text-white mb-3 opacity-0 drop-shadow-lg">
        Ocean Recoveries Lab
      </h1>
      <p class="hero-tagline text-xl md:text-3xl lg:text-4xl font-bold text-white mb-4 opacity-0 drop-shadow-md">
        Science for reef & kelp forest recovery
      </p>
      <p class="hero-description max-w-2xl mx-auto text-base md:text-lg text-white/90 leading-relaxed mb-6 opacity-0 drop-shadow-sm">
        We combine field experiments, quantitative models, and community partnerships to understand how ocean ecosystems regenerate.
      </p>

      <!-- Social Proof Bar -->
      <div class="hero-stats flex flex-wrap justify-center gap-6 md:gap-10 mb-8 opacity-0">
        <div class="text-center">
          <span class="block text-2xl md:text-3xl font-black text-white">75+</span>
          <span class="text-xs md:text-sm text-white/70 uppercase tracking-wide">Publications</span>
        </div>
        <div class="text-center">
          <span class="block text-2xl md:text-3xl font-black text-white">15</span>
          <span class="text-xs md:text-sm text-white/70 uppercase tracking-wide">Years</span>
        </div>
        <div class="text-center">
          <span class="block text-2xl md:text-3xl font-black text-white">2</span>
          <span class="text-xs md:text-sm text-white/70 uppercase tracking-wide">LTER Sites</span>
        </div>
      </div>

      <div class="hero-cta flex flex-col sm:flex-row gap-3 justify-center opacity-0">
        <a href="/research" class="btn btn-primary btn-lg">
          See Our Research
        </a>
        <a href="/people" class="btn btn-ghost btn-lg">
          Meet the Team
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-6 md:bottom-8 left-1/2 -translate-x-1/2 z-10">
      <a
        href="#research"
        class="flex flex-col items-center gap-2 text-white/80 hover:text-white transition-colors no-underline group"
        aria-label="Scroll to learn more"
      >
        <span class="text-xs md:text-sm font-semibold uppercase tracking-wider">Discover</span>
        <svg
          class="w-5 h-5 md:w-6 md:h-6 animate-bounce-subtle group-hover:translate-y-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Study Systems Section -->
  <section id="research" class="section bg-surface">
    <div class="container">
      <div class="text-center mb-10 scroll-reveal">
        <span class="eyebrow">Where We Work</span>
        <h2>Study Systems</h2>
        <p class="lead max-w-2xl mx-auto">
          Two iconic marine ecosystems. One mission: understanding recovery.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 lg:gap-8 max-w-4xl mx-auto">
        {studySystems.map((system, i) => (
          <a href={`/research/${system.slug}`} class={`study-system-card scroll-reveal stagger-${i + 1} group ${system.slug === 'coral-reefs' ? 'card-coral' : 'card-kelp'}`}>
            <div class="study-system-image img-zoom">
              <img
                src={system.heroImage}
                alt={system.title}
                loading="lazy"
              />
              <!-- Stronger gradient for better text readability -->
              <div class="absolute inset-0 bg-gradient-to-t from-bg-primary via-bg-primary/70 to-bg-primary/20"></div>
            </div>
            <div class="study-system-content">
              <span class="inline-block px-2 py-1 text-xs font-bold uppercase tracking-wide bg-black/40 backdrop-blur-sm rounded mb-2 drop-shadow-md">
                {system.slug === 'coral-reefs' ? 'Moorea, French Polynesia' : 'Santa Barbara, California'}
              </span>
              <h3 class="text-2xl text-white mb-2 group-hover:text-accent-2 transition-colors drop-shadow-lg">{system.title}</h3>
              <p class="text-white/90 text-sm mb-3 drop-shadow-md">
                {system.tagline}
              </p>
              <span class="inline-flex items-center gap-2 text-accent text-sm font-semibold group-hover:gap-3 transition-all drop-shadow-md">
                Learn more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Research Pillars Section -->
  <section class="section bg-navy-deep overflow-hidden">
    <div class="container">
      <div class="text-center mb-10 scroll-reveal">
        <span class="eyebrow text-accent-2">How We Work</span>
        <h2 class="text-white">Three Research Pillars</h2>
        <p class="lead max-w-2xl mx-auto text-white/70">
          Our work integrates across three interconnected approaches.
        </p>
      </div>

      <div class="pillars-grid">
        <!-- Pillar 1: Ecosystem Dynamics -->
        <div class="pillar-card scroll-reveal stagger-1">
          <div class="pillar-icon">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="pillar-title">{researchPillars[0].title}</h3>
          <p class="pillar-desc">{researchPillars[0].description}</p>
        </div>

        <!-- Pillar 2: Conservation Science -->
        <div class="pillar-card scroll-reveal stagger-2">
          <div class="pillar-icon">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
