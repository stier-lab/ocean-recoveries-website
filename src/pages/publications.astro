---
import Layout from '@layouts/Layout.astro';
import PublicationList from '@components/publications/PublicationList';
import { publications, allThemes } from '@data/publications';
import { posts } from '@data/posts';
import { enrichPublicationsWithImages } from '@utils/publicationImages';

// Enrich publications with images from news posts
const publicationsWithImages = enrichPublicationsWithImages(publications, posts);

// Calculate stats for the hero
const totalPublications = publications.length;
const yearRange = {
  min: Math.min(...publications.map(p => p.year)),
  max: Math.max(...publications.map(p => p.year)),
};
const openAccessCount = publications.filter(p => p.openAccess).length;
---

<Layout
  title="Publications"
  description="Peer-reviewed publications from the Ocean Recoveries Lab at UC Santa Barbara."
>
  <!-- Hero - improved with stats -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/overwater-bungalows-split-view-reef-fish.jpeg');"
    >
      <div class="absolute inset-0 bg-navy-deep/75"></div>
    </div>
    <div class="relative container text-center text-white">
      <span class="inline-block px-4 py-1.5 mb-4 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-semibold">
        {totalPublications} Peer-Reviewed Publications
      </span>
      <h1 class="text-white mb-4">Our Research</h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto mb-8">
        Advancing our understanding of coral reef and kelp forest recovery, resilience, and restoration.
      </p>

      <!-- Quick stats -->
      <div class="flex flex-wrap justify-center gap-6 md:gap-10">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white">{yearRange.max - yearRange.min + 1}+</div>
          <div class="text-sm text-white/60">Years of Research</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white">{openAccessCount}</div>
          <div class="text-sm text-white/60">Open Access</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-white">{allThemes.length}</div>
          <div class="text-sm text-white/60">Research Themes</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Publications -->
  <section class="section bg-surface">
    <div class="container">
      <PublicationList
        client:load
        publications={publicationsWithImages}
        themes={allThemes}
      />
    </div>
  </section>

  <!-- Data & Code -->
  <section class="section bg-navy-highlight">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block px-3 py-1 mb-3 rounded-full bg-accent/10 text-accent text-xs font-bold uppercase tracking-wide">
            Open Science
          </span>
          <h2 class="mb-4">Transparent & Reproducible Research</h2>
          <p class="text-muted max-w-xl mx-auto">
            We're committed to open science. Most of our publications are open access, and we share
            data and code whenever possible.
          </p>
        </div>

        <!-- Stats cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent mb-1">{openAccessCount}</div>
            <div class="text-sm text-muted">Open Access Papers</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-2 mb-1">
              {publications.filter(p => p.dataAvailable).length}
            </div>
            <div class="text-sm text-muted">With Open Data</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-warm mb-1">
              {publications.filter(p => p.codeUrl).length}
            </div>
            <div class="text-sm text-muted">With Open Code</div>
          </div>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/stier-lab"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>
          <a
            href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
            </svg>
            Google Scholar
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
