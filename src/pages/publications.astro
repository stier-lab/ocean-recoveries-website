---
import Layout from '@layouts/Layout.astro';
import PublicationList from '@components/publications/PublicationList';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import { publications, allThemes } from '@data/publications';
import { posts } from '@data/posts';
import { enrichPublicationsWithImages } from '@utils/publicationImages';

// Enrich publications with images from news posts
const publicationsWithImages = enrichPublicationsWithImages(publications, posts);

// Get featured publications (already marked in data)
const featuredPublications = publicationsWithImages.filter(p => p.featured);

// Calculate stats
const totalPublications = publications.length;
const openAccessCount = publications.filter(p => p.openAccess).length;
---

<Layout
  title="Publications"
  description="Peer-reviewed publications from the Ocean Recoveries Lab at UC Santa Barbara. Browse our research on coral reef resilience, kelp forest ecology, and marine conservation."
  keywords={['scientific publications', 'marine research papers', 'coral reef publications', 'kelp forest research', 'peer-reviewed papers']}
>
  <!-- SEO Structured Data -->
  <BreadcrumbSchema
    items={[
      { name: 'Publications', url: '/publications' }
    ]}
  />

  <!-- Compact Header -->
  <section class="pub-header pt-6 pb-4 bg-surface border-b border-line/30 relative overflow-hidden">
    <!-- Subtle blob background -->
    <div class="blob-container" aria-hidden="true">
      <div class="blob blob-1"></div>
    </div>

    <div class="container relative z-10">
      <!-- Breadcrumbs -->
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-muted">
          <li>
            <a href="/" class="hover:text-accent transition-colors">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <span class="text-ink font-medium" aria-current="page">Publications</span>
          </li>
        </ol>
      </nav>

      <!-- Title row -->
      <div class="flex items-center justify-between flex-wrap gap-4">
        <h1 class="pub-title text-2xl md:text-3xl font-bold m-0">
          <span class="gradient-text">Publications</span>
        </h1>
        <span class="text-sm text-muted">{totalPublications} peer-reviewed papers</span>
      </div>
    </div>
  </section>

  <!-- Featured Publications - Compact Horizontal Strip -->
  <section class="py-4 bg-navy-deep border-b border-line/20">
    <div class="container">
      <div class="flex items-center gap-4 mb-3">
        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-accent/10 border border-accent/20 text-accent text-[10px] font-bold uppercase tracking-wide whitespace-nowrap">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Recent Highlights
        </span>
        <span class="text-white/40 text-xs">High-impact research from 2022â€“2024</span>
      </div>

      <!-- Horizontal Scroll Strip -->
      <div class="featured-strip">
        {featuredPublications.slice(0, 6).map((pub) => (
          <a
            href={pub.doi ? `https://doi.org/${pub.doi}` : '#'}
            target="_blank"
            rel="noopener noreferrer"
            class="featured-chip group"
          >
            <div class="chip-content">
              <span class="chip-journal">{pub.journal}</span>
              <span class="chip-year">{pub.year}</span>
            </div>
            <h3 class="chip-title">{pub.title}</h3>
            <svg class="chip-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Publications -->
  <section id="all-publications" class="py-10 bg-surface scroll-mt-24">
    <div class="container">
      <div class="mb-6">
        <h2 class="text-lg font-bold text-ink">All Publications</h2>
        <p class="text-muted text-sm">Browse and filter our complete catalog of {totalPublications} peer-reviewed papers.</p>
      </div>
      <PublicationList
        client:load
        publications={publicationsWithImages}
        themes={allThemes}
      />
    </div>
  </section>

  <!-- Data & Code -->
  <section class="section bg-navy-highlight">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block px-3 py-1 mb-3 rounded-full bg-accent/10 text-accent text-xs font-bold uppercase tracking-wide">
            Open Science
          </span>
          <h2 class="mb-4">Transparent & Reproducible Research</h2>
          <p class="text-muted max-w-xl mx-auto">
            {openAccessCount} of our {totalPublications} papers are open access. All datasets since 2019 are archived on EDI or Zenodo.
          </p>
        </div>

        <!-- Stats cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent mb-1">{openAccessCount}</div>
            <div class="text-sm text-muted">Open Access Papers</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-2 mb-1">
              {publications.filter(p => p.dataAvailable).length}
            </div>
            <div class="text-sm text-muted">With Open Data</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-warm mb-1">
              {publications.filter(p => p.codeUrl).length}
            </div>
            <div class="text-sm text-muted">With Open Code</div>
          </div>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/stier-lab"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary magnetic-btn"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>
          <a
            href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary magnetic-btn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
            </svg>
            Google Scholar
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Gradient Text */
  .gradient-text {
    background: linear-gradient(135deg, #f1f5f9 0%, #38bdf8 50%, #2dd4bf 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .pub-title {
    animation: fadeUp 0.6s ease-out forwards;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Blob */
  .blob-container {
    @apply absolute inset-0 overflow-hidden pointer-events-none;
  }

  .blob {
    @apply absolute rounded-full;
    filter: blur(60px);
    animation: blob-morph 20s ease-in-out infinite;
  }

  .blob-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(56, 189, 248, 0.1) 0%, transparent 70%);
    top: -100px;
    right: -50px;
  }

  @keyframes blob-morph {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.1); }
  }

  /* Featured Strip - Horizontal Scroll */
  .featured-strip {
    display: flex;
    gap: 0.75rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    margin: 0 -1rem;
    padding-left: 1rem;
    padding-right: 1rem;
    scrollbar-width: thin;
    scrollbar-color: rgba(56, 189, 248, 0.3) transparent;
  }

  .featured-strip::-webkit-scrollbar {
    height: 4px;
  }

  .featured-strip::-webkit-scrollbar-track {
    background: transparent;
  }

  .featured-strip::-webkit-scrollbar-thumb {
    background: rgba(56, 189, 248, 0.3);
    border-radius: 2px;
  }

  /* Featured Chip - Compact Card */
  .featured-chip {
    flex: 0 0 auto;
    width: 260px;
    padding: 0.75rem 1rem;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(56, 189, 248, 0.15);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
  }

  .featured-chip:hover {
    background: rgba(30, 41, 59, 1);
    border-color: rgba(56, 189, 248, 0.4);
    transform: translateY(-2px);
  }

  .chip-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.375rem;
  }

  .chip-journal {
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #38bdf8;
  }

  .chip-year {
    font-size: 0.625rem;
    font-weight: 600;
    color: rgba(241, 245, 249, 0.5);
    padding: 0.125rem 0.375rem;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 4px;
  }

  .chip-title {
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1.4;
    color: #f1f5f9;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0;
    padding-right: 1.25rem;
  }

  .chip-arrow {
    position: absolute;
    right: 0.75rem;
    bottom: 0.75rem;
    width: 0.875rem;
    height: 0.875rem;
    color: rgba(56, 189, 248, 0.4);
    transition: all 0.2s ease;
  }

  .featured-chip:hover .chip-arrow {
    color: #38bdf8;
    transform: translate(2px, -2px);
  }

  .featured-chip:hover .chip-title {
    color: #38bdf8;
  }

  /* Focus states */
  .featured-chip:focus {
    outline: none;
    border-color: #38bdf8;
    box-shadow: 0 0 0 2px rgba(56, 189, 248, 0.2);
  }

  @media (prefers-reduced-motion: reduce) {
    .gradient-text, .blob, .pub-title {
      animation: none;
    }
    .pub-title { opacity: 1; }
    .featured-chip { transition: none; }
    .chip-arrow { transition: none; }
  }
</style>
