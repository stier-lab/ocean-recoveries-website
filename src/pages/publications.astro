---
import Layout from '@layouts/Layout.astro';
import PublicationList from '@components/publications/PublicationList';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import { publications, allThemes } from '@data/publications';
import { posts } from '@data/posts';
import { enrichPublicationsWithImages } from '@utils/publicationImages';

// Enrich publications with images from news posts
const publicationsWithImages = enrichPublicationsWithImages(publications, posts);

// Get featured publications (already marked in data)
const featuredPublications = publicationsWithImages.filter(p => p.featured);

// Calculate stats
const totalPublications = publications.length;
const openAccessCount = publications.filter(p => p.openAccess).length;
---

<Layout
  title="Publications"
  description="Peer-reviewed publications from the Ocean Recoveries Lab at UC Santa Barbara. Browse our research on coral reef resilience, kelp forest ecology, and marine conservation."
  keywords={['scientific publications', 'marine research papers', 'coral reef publications', 'kelp forest research', 'peer-reviewed papers']}
>
  <!-- SEO Structured Data -->
  <BreadcrumbSchema
    items={[
      { name: 'Publications', url: '/publications' }
    ]}
  />

  <!-- Compact Header -->
  <section class="pub-header pt-6 pb-4 bg-surface border-b border-line/30 relative overflow-hidden">
    <!-- Subtle blob background -->
    <div class="blob-container" aria-hidden="true">
      <div class="blob blob-1"></div>
    </div>

    <div class="container relative z-10">
      <!-- Breadcrumbs -->
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-muted">
          <li>
            <a href="/" class="hover:text-accent transition-colors">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <span class="text-ink font-medium" aria-current="page">Publications</span>
          </li>
        </ol>
      </nav>

      <!-- Title row -->
      <div class="flex items-center justify-between flex-wrap gap-4">
        <h1 class="pub-title text-2xl md:text-3xl font-bold m-0">
          <span class="gradient-text">Publications</span>
        </h1>
        <span class="text-sm text-muted">{totalPublications} peer-reviewed papers</span>
      </div>
    </div>
  </section>

  <!-- Featured Publications -->
  <section class="py-16 bg-navy-deep relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-30" aria-hidden="true">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-accent-2/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container relative z-10">
      <div class="text-center mb-12">
        <span class="inline-flex items-center gap-2 px-4 py-2 mb-4 rounded-full bg-accent/10 border border-accent/20 text-accent text-xs font-bold uppercase tracking-wide">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Selected Work
        </span>
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-3">Featured Publications</h2>
        <p class="text-white/60 max-w-2xl mx-auto">High-impact research advancing our understanding of marine ecosystem resilience and recovery.</p>
      </div>

      <!-- Featured Grid - Bento Style -->
      <div class="featured-bento">
        {featuredPublications.slice(0, 6).map((pub, index) => (
          <article
            class={`featured-card featured-card-${index + 1} group`}
            style={`--delay: ${index * 0.1}s`}
          >
            {/* Background Image or Pattern */}
            <div class="featured-card-bg">
              {pub.image ? (
                <img src={pub.image} alt="" loading="lazy" />
              ) : (
                <div class="featured-pattern">
                  <svg viewBox="0 0 100 100" preserveAspectRatio="none">
                    <defs>
                      <pattern id={`dots-${pub.id}`} patternUnits="userSpaceOnUse" width="20" height="20">
                        <circle cx="10" cy="10" r="1.5" fill="currentColor" opacity="0.3" />
                      </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill={`url(#dots-${pub.id})`} />
                  </svg>
                </div>
              )}
              <div class="featured-card-overlay"></div>
            </div>

            {/* Content */}
            <div class="featured-card-content">
              {/* Badges */}
              <div class="featured-badges">
                <span class="featured-year">{pub.year}</span>
                {pub.openAccess && (
                  <span class="featured-oa">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                    </svg>
                    OA
                  </span>
                )}
                {pub.citationCount && pub.citationCount > 50 && (
                  <span class="featured-citations">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                    {pub.citationCount}
                  </span>
                )}
              </div>

              {/* Journal */}
              <span class="featured-journal">{pub.journal}</span>

              {/* Title */}
              <h3 class="featured-title">
                {pub.doi ? (
                  <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer">
                    {pub.title}
                  </a>
                ) : (
                  pub.title
                )}
              </h3>

              {/* Authors - truncated */}
              <p class="featured-authors">{pub.authors.split(',').slice(0, 3).join(', ')}{pub.authors.split(',').length > 3 ? ' et al.' : ''}</p>

              {/* Action link */}
              <div class="featured-action">
                <span>Read paper</span>
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>

            {/* Hover glow effect */}
            <div class="featured-glow"></div>
          </article>
        ))}
      </div>

      {/* View all link */}
      <div class="text-center mt-10">
        <a href="#all-publications" class="inline-flex items-center gap-2 text-accent hover:text-accent/80 font-semibold transition-colors">
          <span>Browse all {totalPublications} publications below</span>
          <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- All Publications -->
  <section id="all-publications" class="py-10 bg-surface scroll-mt-24">
    <div class="container">
      <div class="mb-6">
        <h2 class="text-lg font-bold text-ink">All Publications</h2>
        <p class="text-muted text-sm">Browse and filter our complete catalog of {totalPublications} peer-reviewed papers.</p>
      </div>
      <PublicationList
        client:load
        publications={publicationsWithImages}
        themes={allThemes}
      />
    </div>
  </section>

  <!-- Data & Code -->
  <section class="section bg-navy-highlight">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block px-3 py-1 mb-3 rounded-full bg-accent/10 text-accent text-xs font-bold uppercase tracking-wide">
            Open Science
          </span>
          <h2 class="mb-4">Transparent & Reproducible Research</h2>
          <p class="text-muted max-w-xl mx-auto">
            We're committed to open science. Most of our publications are open access, and we share
            data and code whenever possible.
          </p>
        </div>

        <!-- Stats cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent mb-1">{openAccessCount}</div>
            <div class="text-sm text-muted">Open Access Papers</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-2 mb-1">
              {publications.filter(p => p.dataAvailable).length}
            </div>
            <div class="text-sm text-muted">With Open Data</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-warm mb-1">
              {publications.filter(p => p.codeUrl).length}
            </div>
            <div class="text-sm text-muted">With Open Code</div>
          </div>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/stier-lab"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary magnetic-btn"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>
          <a
            href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary magnetic-btn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
            </svg>
            Google Scholar
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Gradient Text */
  .gradient-text {
    background: linear-gradient(135deg, #f1f5f9 0%, #38bdf8 50%, #2dd4bf 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .pub-title {
    animation: fadeUp 0.6s ease-out forwards;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Blob */
  .blob-container {
    @apply absolute inset-0 overflow-hidden pointer-events-none;
  }

  .blob {
    @apply absolute rounded-full;
    filter: blur(60px);
    animation: blob-morph 20s ease-in-out infinite;
  }

  .blob-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(56, 189, 248, 0.1) 0%, transparent 70%);
    top: -100px;
    right: -50px;
  }

  @keyframes blob-morph {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.1); }
  }

  /* Featured Bento Grid */
  .featured-bento {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .featured-bento {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto auto auto;
    }
  }

  @media (min-width: 1024px) {
    .featured-bento {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: 320px 280px;
      gap: 1.25rem;
    }

    /* First card spans 2 columns and 1 row */
    .featured-card-1 {
      grid-column: span 2;
    }
  }

  /* Featured Card Base */
  .featured-card {
    position: relative;
    border-radius: 1.25rem;
    overflow: hidden;
    min-height: 280px;
    animation: cardFadeUp 0.6s ease-out backwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes cardFadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Card Background */
  .featured-card-bg {
    position: absolute;
    inset: 0;
  }

  .featured-card-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .featured-card:hover .featured-card-bg img {
    transform: scale(1.08);
  }

  .featured-pattern {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    color: #38bdf8;
  }

  .featured-pattern svg {
    width: 100%;
    height: 100%;
  }

  .featured-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(15, 23, 42, 0.98) 0%,
      rgba(15, 23, 42, 0.85) 40%,
      rgba(15, 23, 42, 0.4) 100%
    );
  }

  /* Card with image gets different overlay */
  .featured-card-bg:has(img) .featured-card-overlay {
    background: linear-gradient(
      to top,
      rgba(15, 23, 42, 0.95) 0%,
      rgba(15, 23, 42, 0.7) 50%,
      rgba(15, 23, 42, 0.3) 100%
    );
  }

  /* Card Content */
  .featured-card-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.5rem;
    justify-content: flex-end;
  }

  /* Badges */
  .featured-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .featured-year {
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    background: rgba(56, 189, 248, 0.2);
    color: #38bdf8;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .featured-oa {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .featured-citations {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
    font-size: 0.625rem;
    font-weight: 700;
  }

  /* Journal */
  .featured-journal {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #38bdf8;
    margin-bottom: 0.5rem;
  }

  /* Title */
  .featured-title {
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.4;
    color: #f1f5f9;
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-card-1 .featured-title {
    font-size: 1.25rem;
    -webkit-line-clamp: 2;
  }

  .featured-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }

  .featured-card:hover .featured-title a {
    color: #38bdf8;
  }

  /* Authors */
  .featured-authors {
    font-size: 0.75rem;
    color: rgba(241, 245, 249, 0.5);
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Action */
  .featured-action {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #38bdf8;
    opacity: 0;
    transform: translateY(8px);
    transition: all 0.3s ease;
  }

  .featured-card:hover .featured-action {
    opacity: 1;
    transform: translateY(0);
  }

  /* Glow Effect */
  .featured-glow {
    position: absolute;
    inset: 0;
    border-radius: 1.25rem;
    border: 1px solid transparent;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .featured-card:hover .featured-glow {
    border-color: rgba(56, 189, 248, 0.4);
    box-shadow:
      0 0 30px rgba(56, 189, 248, 0.15),
      inset 0 0 30px rgba(56, 189, 248, 0.05);
  }

  /* Focus states for accessibility */
  .featured-card:focus-within {
    outline: none;
  }

  .featured-card:focus-within .featured-glow {
    border-color: #38bdf8;
    box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.3);
  }

  .featured-title a:focus {
    outline: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .gradient-text, .blob, .pub-title, .featured-card {
      animation: none;
    }
    .pub-title { opacity: 1; }
    .featured-card { opacity: 1; transform: none; }
    .featured-action { opacity: 1; transform: none; }
    .featured-card-bg img { transition: none; }
  }
</style>
