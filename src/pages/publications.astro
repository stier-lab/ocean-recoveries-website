---
import Layout from '@layouts/Layout.astro';
import PublicationList from '@components/publications/PublicationList';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import { publications, allThemes } from '@data/publications';
import { posts } from '@data/posts';
import { enrichPublicationsWithImages } from '@utils/publicationImages';

// Enrich publications with images from news posts
const publicationsWithImages = enrichPublicationsWithImages(publications, posts);

// Calculate stats
const totalPublications = publications.length;
const openAccessCount = publications.filter(p => p.openAccess).length;
const dataCount = publications.filter(p => p.dataAvailable).length;
const codeCount = publications.filter(p => p.codeUrl).length;

// Get year range
const years = publications.map(p => p.year);
const yearRange = `${Math.min(...years)}â€“${Math.max(...years)}`;
---

<Layout
  title="Publications"
  description="Peer-reviewed publications from the Ocean Recoveries Lab at UC Santa Barbara. Browse our research on coral reef resilience, kelp forest ecology, and marine conservation."
  keywords={['scientific publications', 'marine research papers', 'coral reef publications', 'kelp forest research', 'peer-reviewed papers']}
>
  <!-- SEO Structured Data -->
  <BreadcrumbSchema
    items={[
      { name: 'Publications', url: '/publications' }
    ]}
  />

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li>
            <a href="/">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <span aria-current="page">Publications</span>
          </li>
        </ol>
      </nav>

      <!-- Title and stats -->
      <div class="header-content">
        <div class="header-text">
          <h1 class="page-title">
            <span class="title-gradient">Publications</span>
          </h1>
          <p class="page-desc">
            {totalPublications} peer-reviewed papers advancing our understanding of marine ecosystem
            resilience, from coral reefs to kelp forests.
          </p>
        </div>

        <!-- Quick stats -->
        <div class="header-stats">
          <div class="stat">
            <span class="stat-value">{totalPublications}</span>
            <span class="stat-label">Papers</span>
          </div>
          <div class="stat">
            <span class="stat-value">{yearRange}</span>
            <span class="stat-label">Years</span>
          </div>
          <div class="stat">
            <span class="stat-value">{openAccessCount}</span>
            <span class="stat-label">Open Access</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- All Publications -->
  <section id="all-publications" class="all-publications">
    <div class="container">
      <PublicationList
        client:load
        publications={publicationsWithImages}
        themes={allThemes}
      />
    </div>
  </section>

  <!-- Open Science Section -->
  <section class="open-science">
    <div class="container">
      <div class="section-header">
        <span class="section-eyebrow">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
          </svg>
          Open Science
        </span>
        <h2 class="section-title">
          <span class="title-gradient">Transparent & Reproducible</span>
        </h2>
        <p class="section-desc">
          We believe in open science. All datasets since 2019 are archived on EDI or Zenodo
          for reproducibility and transparency.
        </p>
      </div>

      <!-- Stats grid -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <div class="stat-number">{openAccessCount}</div>
          <div class="stat-title">Open Access Papers</div>
          <div class="stat-bar">
            <div class="stat-fill" style={`--percent: ${(openAccessCount / totalPublications) * 100}%`}></div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon stat-icon-teal">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
            </svg>
          </div>
          <div class="stat-number stat-number-teal">{dataCount}</div>
          <div class="stat-title">With Open Data</div>
          <div class="stat-bar stat-bar-teal">
            <div class="stat-fill" style={`--percent: ${(dataCount / totalPublications) * 100}%`}></div>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon stat-icon-amber">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <div class="stat-number stat-number-amber">{codeCount}</div>
          <div class="stat-title">With Open Code</div>
          <div class="stat-bar stat-bar-amber">
            <div class="stat-fill" style={`--percent: ${(codeCount / totalPublications) * 100}%`}></div>
          </div>
        </div>
      </div>

      <!-- Action buttons -->
      <div class="action-buttons">
        <a
          href="https://github.com/stier-lab"
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn action-btn-primary"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          View on GitHub
        </a>
        <a
          href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn action-btn-secondary"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
          </svg>
          Google Scholar
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
     PAGE HEADER
     ============================================ */
  .page-header {
    padding: 6rem 0 3rem;
    background: linear-gradient(180deg, #0c1929 0%, #0f172a 100%);
    border-bottom: 1px solid rgba(56, 189, 248, 0.1);
  }

  /* Breadcrumbs */
  .breadcrumbs {
    margin-bottom: 2rem;
  }

  .breadcrumbs ol {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .breadcrumbs a {
    color: rgba(241, 245, 249, 0.5);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .breadcrumbs a:hover {
    color: #38bdf8;
  }

  .breadcrumbs .chevron {
    width: 1rem;
    height: 1rem;
    color: rgba(241, 245, 249, 0.3);
  }

  .breadcrumbs span[aria-current] {
    color: #f1f5f9;
    font-weight: 500;
    font-size: 0.875rem;
  }

  /* Header content */
  .header-content {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .header-text {
    max-width: 600px;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 900;
    line-height: 1;
    margin: 0 0 1rem;
    letter-spacing: -0.03em;
  }

  .title-gradient {
    background: linear-gradient(135deg, #f1f5f9 0%, #38bdf8 50%, #2dd4bf 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .page-desc {
    font-size: 1.125rem;
    color: rgba(241, 245, 249, 0.6);
    line-height: 1.6;
    margin: 0;
    max-width: 500px;
  }

  /* Header stats */
  .header-stats {
    display: flex;
    gap: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 800;
    color: #f1f5f9;
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-size: 0.75rem;
    color: rgba(241, 245, 249, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  /* ============================================
     ALL PUBLICATIONS SECTION
     ============================================ */
  .all-publications {
    padding: 3rem 0 4rem;
    background: #0f172a;
  }

  /* ============================================
     OPEN SCIENCE SECTION
     ============================================ */
  .open-science {
    padding: 5rem 0;
    background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(56, 189, 248, 0.1);
    border: 1px solid rgba(56, 189, 248, 0.2);
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #38bdf8;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
  }

  .section-desc {
    font-size: 1.125rem;
    color: rgba(241, 245, 249, 0.6);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Stats grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .stat-card {
    padding: 1.5rem;
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(56, 189, 248, 0.15);
    border-radius: 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-2px);
    border-color: rgba(56, 189, 248, 0.3);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 0.75rem;
    color: #38bdf8;
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
  }

  .stat-icon-teal {
    background: rgba(45, 212, 191, 0.1);
    color: #2dd4bf;
  }

  .stat-icon-amber {
    background: rgba(251, 191, 36, 0.1);
    color: #fbbf24;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: #38bdf8;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .stat-number-teal {
    color: #2dd4bf;
  }

  .stat-number-amber {
    color: #fbbf24;
  }

  .stat-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: #f1f5f9;
    margin-bottom: 1rem;
  }

  .stat-bar {
    height: 4px;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .stat-bar-teal {
    background: rgba(45, 212, 191, 0.1);
  }

  .stat-bar-amber {
    background: rgba(251, 191, 36, 0.1);
  }

  .stat-fill {
    height: 100%;
    width: var(--percent);
    background: linear-gradient(90deg, #38bdf8, #2dd4bf);
    border-radius: 2px;
  }

  .stat-bar-teal .stat-fill {
    background: linear-gradient(90deg, #2dd4bf, #38bdf8);
  }

  .stat-bar-amber .stat-fill {
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
  }

  /* Action buttons */
  .action-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 700;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .action-btn-primary {
    background: linear-gradient(135deg, #38bdf8, #0ea5e9);
    color: white;
    box-shadow: 0 4px 15px rgba(56, 189, 248, 0.25);
  }

  .action-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(56, 189, 248, 0.35);
  }

  .action-btn-secondary {
    background: transparent;
    border: 2px solid rgba(241, 245, 249, 0.2);
    color: #f1f5f9;
  }

  .action-btn-secondary:hover {
    border-color: #38bdf8;
    color: #38bdf8;
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 768px) {
    .page-header {
      padding: 5rem 0 2rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-stats {
      gap: 1.5rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }
  }

  /* ============================================
     REDUCED MOTION
     ============================================ */
  @media (prefers-reduced-motion: reduce) {
    .title-gradient {
      animation: none;
    }

    .stat-card:hover,
    .action-btn:hover {
      transform: none;
    }
  }
</style>
