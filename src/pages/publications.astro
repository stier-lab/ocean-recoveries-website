---
import Layout from '@layouts/Layout.astro';
import PublicationList from '@components/publications/PublicationList';
import { publications, allThemes } from '@data/publications';
import { posts } from '@data/posts';
import { enrichPublicationsWithImages } from '@utils/publicationImages';

// Enrich publications with images from news posts
const publicationsWithImages = enrichPublicationsWithImages(publications, posts);

// Get featured publications (already marked in data)
const featuredPublications = publicationsWithImages.filter(p => p.featured);

// Calculate stats
const totalPublications = publications.length;
const openAccessCount = publications.filter(p => p.openAccess).length;
---

<Layout
  title="Publications"
  description="Peer-reviewed publications from the Ocean Recoveries Lab at UC Santa Barbara."
>
  <!-- Compact Header -->
  <section class="pub-header pt-6 pb-4 bg-surface border-b border-line/30 relative overflow-hidden">
    <!-- Subtle blob background -->
    <div class="blob-container" aria-hidden="true">
      <div class="blob blob-1"></div>
    </div>

    <div class="container relative z-10">
      <!-- Breadcrumbs -->
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-muted">
          <li>
            <a href="/" class="hover:text-accent transition-colors">Home</a>
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </li>
          <li>
            <span class="text-ink font-medium" aria-current="page">Publications</span>
          </li>
        </ol>
      </nav>

      <!-- Title row -->
      <div class="flex items-center justify-between flex-wrap gap-4">
        <h1 class="pub-title text-2xl md:text-3xl font-bold m-0">
          <span class="gradient-text">Publications</span>
        </h1>
        <span class="text-sm text-muted">{totalPublications} peer-reviewed papers</span>
      </div>
    </div>
  </section>

  <!-- Featured Publications -->
  <section class="py-12 bg-surface border-b border-line/20">
    <div class="container">
      <div class="mb-8">
        <span class="inline-block px-3 py-1 mb-3 rounded-full bg-accent/10 text-accent text-xs font-bold uppercase tracking-wide">
          Selected Work
        </span>
        <h2 class="text-xl md:text-2xl font-bold text-ink mb-2">Featured Publications</h2>
        <p class="text-muted text-sm max-w-2xl">High-impact research advancing our understanding of marine ecosystem resilience and recovery.</p>
      </div>

      <div class="featured-grid">
        {featuredPublications.slice(0, 6).map((pub, index) => (
          <article class="featured-pub scroll-reveal" style={`--stagger: ${index}`}>
            <div class="featured-pub-content">
              <div class="flex items-center gap-2 mb-3">
                <span class="text-xs font-bold text-accent">{pub.year}</span>
                <span class="w-1 h-1 rounded-full bg-line"></span>
                <span class="text-xs text-muted truncate">{pub.journal}</span>
                {pub.openAccess && (
                  <span class="ml-auto px-2 py-0.5 rounded-full bg-green-500/10 text-green-400 text-[10px] font-bold uppercase">
                    Open Access
                  </span>
                )}
              </div>
              <h3 class="featured-pub-title">
                {pub.doi ? (
                  <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer" class="hover:text-accent transition-colors">
                    {pub.title}
                  </a>
                ) : (
                  pub.title
                )}
              </h3>
              <p class="text-xs text-muted mt-2 line-clamp-2">{pub.authors}</p>
              {pub.citationCount && pub.citationCount > 10 && (
                <div class="mt-3 flex items-center gap-1 text-xs text-muted">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span>{pub.citationCount} citations</span>
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- All Publications -->
  <section class="py-6 bg-surface">
    <div class="container">
      <div class="mb-6">
        <h2 class="text-lg font-bold text-ink">All Publications</h2>
        <p class="text-muted text-sm">Browse and filter our complete catalog of {totalPublications} peer-reviewed papers.</p>
      </div>
      <PublicationList
        client:load
        publications={publicationsWithImages}
        themes={allThemes}
      />
    </div>
  </section>

  <!-- Data & Code -->
  <section class="section bg-navy-highlight">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-10">
          <span class="inline-block px-3 py-1 mb-3 rounded-full bg-accent/10 text-accent text-xs font-bold uppercase tracking-wide">
            Open Science
          </span>
          <h2 class="mb-4">Transparent & Reproducible Research</h2>
          <p class="text-muted max-w-xl mx-auto">
            We're committed to open science. Most of our publications are open access, and we share
            data and code whenever possible.
          </p>
        </div>

        <!-- Stats cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent mb-1">{openAccessCount}</div>
            <div class="text-sm text-muted">Open Access Papers</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-2 mb-1">
              {publications.filter(p => p.dataAvailable).length}
            </div>
            <div class="text-sm text-muted">With Open Data</div>
          </div>
          <div class="bg-surface-card/50 border border-line rounded-xl p-5 text-center">
            <div class="text-3xl font-bold text-accent-warm mb-1">
              {publications.filter(p => p.codeUrl).length}
            </div>
            <div class="text-sm text-muted">With Open Code</div>
          </div>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/stier-lab"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary magnetic-btn"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            View on GitHub
          </a>
          <a
            href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary magnetic-btn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
            </svg>
            Google Scholar
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Featured Publications Grid */
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .featured-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .featured-pub {
    @apply bg-surface-card/50 border border-line rounded-xl p-5 transition-all duration-300;
  }

  .featured-pub:hover {
    @apply border-accent/30 bg-surface-card;
    transform: translateY(-2px);
  }

  .featured-pub-title {
    @apply text-sm font-semibold text-ink leading-snug;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-pub-content {
    @apply flex flex-col h-full;
  }

  /* Gradient Text */
  .gradient-text {
    background: linear-gradient(135deg, #f1f5f9 0%, #38bdf8 50%, #2dd4bf 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .pub-title {
    animation: fadeUp 0.6s ease-out forwards;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Blob */
  .blob-container {
    @apply absolute inset-0 overflow-hidden pointer-events-none;
  }

  .blob {
    @apply absolute rounded-full;
    filter: blur(60px);
    animation: blob-morph 20s ease-in-out infinite;
  }

  .blob-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(56, 189, 248, 0.1) 0%, transparent 70%);
    top: -100px;
    right: -50px;
  }

  @keyframes blob-morph {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.1); }
  }

  @media (prefers-reduced-motion: reduce) {
    .gradient-text, .blob, .pub-title {
      animation: none;
    }
    .pub-title { opacity: 1; }
  }
</style>
