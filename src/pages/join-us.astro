<script>
  // Parallax effect for hero
  const initParallax = () => {
    const parallaxBg = document.querySelector('.parallax-bg') as HTMLElement;
    if (!parallaxBg) return;

    let ticking = false;

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          const scrolled = window.scrollY;
          const rate = scrolled * 0.3;
          parallaxBg.style.transform = `translateY(${rate}px)`;
          ticking = false;
        });
        ticking = true;
      }
    };

    if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      window.addEventListener('scroll', handleScroll, { passive: true });
    }
  };

  // Find Your Fit Quiz
  const initQuiz = () => {
    const quizContainer = document.getElementById('quiz-container');
    const quizResult = document.getElementById('quiz-result');
    const resultRole = document.getElementById('result-role');
    const resultDescription = document.getElementById('result-description');
    const restartBtn = document.getElementById('quiz-restart');

    if (!quizContainer) return;

    // Store answers
    const answers: Record<string, string> = {};

    // Role recommendations based on answers
    const determineRole = () => {
      const stage = answers['1'];
      const goal = answers['4'];
      const experience = answers['3'];

      // Postdoc: PhD complete + lead/develop + extensive experience
      if (stage === 'phd-complete' || (goal === 'lead' && experience === 'extensive')) {
        return {
          role: 'Postdoctoral Researcher',
          description: 'With your advanced experience and leadership goals, our postdoc positions offer opportunities to lead multi-site experiments and develop your independent research program.'
        };
      }

      // Graduate: seeking grad school OR develop own program OR some experience
      if (stage === 'grad-seeking' || goal === 'develop' || (experience === 'some' && stage !== 'undergrad')) {
        return {
          role: 'Graduate Student (MS/PhD)',
          description: 'Your interests align perfectly with our graduate program, where you can develop your research skills through field experiments, quantitative modeling, and synthesis.'
        };
      }

      // Undergraduate: default for undergrads or those exploring
      return {
        role: 'Undergraduate Researcher',
        description: 'Our undergraduate program is perfect for exploring marine research. You will gain hands-on experience with field surveys, data analysis, and contribute to real publications.'
      };
    };

    // Show question
    const showQuestion = (num: string | number) => {
      const questions = quizContainer.querySelectorAll('.quiz-question');
      const currentActive = quizContainer.querySelector('.quiz-question.active');

      if (currentActive) {
        currentActive.classList.add('exiting');
        currentActive.classList.remove('active');
      }

      setTimeout(() => {
        questions.forEach(q => {
          q.classList.remove('active', 'exiting');
        });

        if (num === 'result') {
          // Show result
          const recommendation = determineRole();
          if (resultRole) resultRole.textContent = recommendation.role;
          if (resultDescription) resultDescription.textContent = recommendation.description;
          quizResult?.classList.add('active');
        } else {
          const nextQ = quizContainer.querySelector(`[data-question="${num}"]`);
          nextQ?.classList.add('active');
        }
      }, 200);
    };

    // Handle option clicks
    const options = quizContainer.querySelectorAll('.quiz-option');
    options.forEach(option => {
      option.addEventListener('click', () => {
        const btn = option as HTMLButtonElement;
        const value = btn.dataset.value;
        const next = btn.dataset.next;
        const question = btn.closest('.quiz-question');
        const questionNum = question?.getAttribute('data-question');

        if (questionNum && value) {
          answers[questionNum] = value;
        }

        // Mark as selected briefly
        btn.classList.add('selected');
        setTimeout(() => {
          btn.classList.remove('selected');
        }, 300);

        // Go to next question
        if (next) {
          setTimeout(() => showQuestion(next), 150);
        }
      });
    });

    // Handle back buttons
    const backBtns = quizContainer.querySelectorAll('.quiz-back');
    backBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const backTo = (btn as HTMLButtonElement).dataset.back;
        if (backTo) {
          // Reverse the animation direction for going back
          const currentActive = quizContainer.querySelector('.quiz-question.active');
          if (currentActive) {
            currentActive.classList.remove('active');
            currentActive.classList.add('exiting');
            (currentActive as HTMLElement).style.transform = 'translateX(30px)';
          }

          setTimeout(() => {
            quizContainer.querySelectorAll('.quiz-question').forEach(q => {
              q.classList.remove('active', 'exiting');
              (q as HTMLElement).style.transform = '';
            });
            const prevQ = quizContainer.querySelector(`[data-question="${backTo}"]`);
            if (prevQ) {
              (prevQ as HTMLElement).style.transform = 'translateX(-30px)';
              prevQ.classList.add('active');
              setTimeout(() => {
                (prevQ as HTMLElement).style.transform = '';
              }, 50);
            }
          }, 200);
        }
      });
    });

    // Handle restart
    restartBtn?.addEventListener('click', () => {
      // Clear answers
      Object.keys(answers).forEach(key => delete answers[key]);

      // Reset to question 1
      quizResult?.classList.remove('active');
      showQuestion(1);
    });
  };

  // Initialize
  initParallax();
  initQuiz();

  // Re-init after view transitions
  document.addEventListener('astro:after-swap', () => {
    initParallax();
    initQuiz();
  });
</script>
