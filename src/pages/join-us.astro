---
import Layout from '@layouts/Layout.astro';
import WaveDivider from '@components/shared/WaveDivider.astro';

// Recruitment status
const recruitmentStatus = {
  isLimited: true,
  message: "Due to budget cuts at NSF and within the University of California system, I'm not accepting new students this fall unless they already have external fellowship support (e.g., NSF GRFP, Fulbright).",
  note: "If you do have funding or are applying for it, I'm happy to chat about fit and projects."
};

---

<Layout
  title="Join Us"
  description="Join the Ocean Recoveries Lab - opportunities for undergraduates, graduate students, and postdocs at UC Santa Barbara."
>
  <!-- Hero Section -->
  <section class="hero-section relative min-h-[60vh] md:min-h-[70vh] flex items-center overflow-hidden">
    <div
      class="absolute inset-0 bg-cover bg-right md:bg-center parallax-bg"
      style="background-image: url('/images/aerial-view-island-lagoon-barrier-reef.jpeg');"
    >
      <div class="absolute inset-0 bg-gradient-to-b from-navy-deep/40 via-navy-deep/30 to-navy-deep/90 md:from-navy-deep/60 md:via-navy-deep/50 md:to-navy-deep/95"></div>
    </div>

    <div class="relative z-10 container text-center px-4 pt-28 pb-20 md:pt-36 md:pb-28">
      <!-- Status Badge -->
      <div class="hero-badge inline-flex items-center gap-2.5 px-4 py-2 rounded-full bg-amber-500/20 backdrop-blur-sm border border-amber-500/30 mb-6">
        <span class="w-2 h-2 rounded-full bg-amber-400 animate-pulse"></span>
        <span class="text-sm font-medium text-amber-200 tracking-wide">Limited recruitment (see details)</span>
      </div>

      <h1 class="hero-title mb-6">
        <span class="text-white block text-lg md:text-xl font-medium uppercase tracking-wider mb-3 opacity-80">Join the Lab</span>
        <span class="gradient-text">Advance the Science of</span>
        <span class="text-white block">Ocean Recovery</span>
      </h1>

      <p class="hero-description lead text-white/70 max-w-2xl mx-auto mb-10">
        We integrate field experiments, quantitative models, and synthesis to find solutions that work.
      </p>

      <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#opportunities" class="btn btn-primary btn-lg group">
          <span>See Open Roles</span>
          <svg class="w-5 h-5 transition-transform group-hover:translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
        <a href="#approach" class="btn btn-ghost btn-lg">
          Our Approach
        </a>
      </div>
    </div>

    <WaveDivider id="hero-wave" fillColor="navy-deep" />
  </section>

  <!-- Recruitment Status Alert -->
  {recruitmentStatus.isLimited && (
    <section class="bg-navy-deep py-6">
      <div class="container">
        <div class="status-alert scroll-reveal">
          <div class="status-icon">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="status-content">
            <p class="status-title">Status (Fall 2025)</p>
            <p class="status-message">{recruitmentStatus.message}</p>
            <p class="status-note">{recruitmentStatus.note}</p>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- What We Do -->
  <section class="section-lg bg-navy-deep relative overflow-hidden">
    <div class="container">
      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto scroll-reveal">
        <div class="work-card">
          <div class="work-image">
            <img src="/images/man-scuba-diver-on-boat.jpg" alt="Field work" loading="lazy" />
          </div>
          <h3>Field Work</h3>
        </div>
        <div class="work-card">
          <div class="work-image">
            <img src="/images/coral-reef-panorama-anthias-fish.jpeg" alt="Quantitative tools" loading="lazy" />
          </div>
          <h3>Quantitative Tools</h3>
        </div>
        <div class="work-card">
          <div class="work-image">
            <img src="/images/research-team-group-photo-beach.jpeg" alt="Team culture" loading="lazy" />
          </div>
          <h3>Team Culture</h3>
        </div>
      </div>
    </div>

    <WaveDivider id="work-wave" fillColor="surface" />
  </section>

  <!-- Our Approach -->
  <section id="approach" class="section-lg bg-surface scroll-mt-20 relative overflow-hidden">
    <div class="blob-container" aria-hidden="true">
      <div class="blob blob-1"></div>
      <div class="blob blob-2"></div>
    </div>

    <div class="container relative z-10">
      <div class="text-center mb-12 scroll-reveal">
        <span class="eyebrow">Our Approach</span>
        <h2 class="mb-4">How We Work</h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <div class="approach-card scroll-reveal stagger-1">
          <div class="approach-icon approach-icon-1">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3>Field × Quant × Synthesis</h3>
          <p>We connect experiments to models and meta-analysis to inform action.</p>
        </div>

        <div class="approach-card scroll-reveal stagger-2">
          <div class="approach-icon approach-icon-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3>Decision Relevance</h3>
          <p>We co-design studies with agencies and NGOs for immediate, real-world use.</p>
        </div>

        <div class="approach-card scroll-reveal stagger-3">
          <div class="approach-icon approach-icon-3">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3>Place-Based Partnerships</h3>
          <p>Long-term collaborations in key reef and kelp systems drive our work.</p>
        </div>

        <div class="approach-card scroll-reveal stagger-4">
          <div class="approach-icon approach-icon-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3>Career Outcomes</h3>
          <p>Our alumni thrive in academia, government, NGOs, and data science.</p>
        </div>
      </div>

      <!-- Interactive Find Your Fit Quiz -->
      <div class="quiz-section scroll-reveal" id="find-your-fit">
        <div class="quiz-header">
          <div class="quiz-icon">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="quiz-title">Find Your Fit</h3>
          <p class="quiz-subtitle">Answer a few questions to discover which role might be right for you</p>
        </div>

        <!-- Quiz Container -->
        <div class="quiz-container" id="quiz-container">
          <!-- Question 1 -->
          <div class="quiz-question active" data-question="1">
            <div class="question-progress">
              <span class="progress-text">Question 1 of 4</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 25%"></div>
              </div>
            </div>
            <h4 class="question-text">What's your current academic stage?</h4>
            <div class="quiz-options">
              <button class="quiz-option" data-value="undergrad" data-next="2">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </span>
                <span class="option-label">Undergraduate student</span>
              </button>
              <button class="quiz-option" data-value="grad-seeking" data-next="2">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </span>
                <span class="option-label">Seeking graduate school (MS/PhD)</span>
              </button>
              <button class="quiz-option" data-value="phd-complete" data-next="2">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </span>
                <span class="option-label">Completed or finishing PhD</span>
              </button>
            </div>
          </div>

          <!-- Question 2 -->
          <div class="quiz-question" data-question="2">
            <div class="question-progress">
              <span class="progress-text">Question 2 of 4</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 50%"></div>
              </div>
            </div>
            <h4 class="question-text">What type of work excites you most?</h4>
            <div class="quiz-options">
              <button class="quiz-option" data-value="field" data-next="3">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </span>
                <span class="option-label">Field work & data collection</span>
              </button>
              <button class="quiz-option" data-value="quant" data-next="3">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </span>
                <span class="option-label">Quantitative analysis & modeling</span>
              </button>
              <button class="quiz-option" data-value="both" data-next="3">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </span>
                <span class="option-label">Both field and analytical work</span>
              </button>
            </div>
            <button class="quiz-back" data-back="1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
          </div>

          <!-- Question 3 -->
          <div class="quiz-question" data-question="3">
            <div class="question-progress">
              <span class="progress-text">Question 3 of 4</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 75%"></div>
              </div>
            </div>
            <h4 class="question-text">How much research experience do you have?</h4>
            <div class="quiz-options">
              <button class="quiz-option" data-value="none" data-next="4">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </span>
                <span class="option-label">Just getting started</span>
              </button>
              <button class="quiz-option" data-value="some" data-next="4">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </span>
                <span class="option-label">Some lab or field experience</span>
              </button>
              <button class="quiz-option" data-value="extensive" data-next="4">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </span>
                <span class="option-label">Published papers or led projects</span>
              </button>
            </div>
            <button class="quiz-back" data-back="2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
          </div>

          <!-- Question 4 -->
          <div class="quiz-question" data-question="4">
            <div class="question-progress">
              <span class="progress-text">Question 4 of 4</span>
              <div class="progress-bar">
                <div class="progress-fill" style="width: 100%"></div>
              </div>
            </div>
            <h4 class="question-text">What's your primary goal?</h4>
            <div class="quiz-options">
              <button class="quiz-option" data-value="explore" data-next="result">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </span>
                <span class="option-label">Explore research as a career option</span>
              </button>
              <button class="quiz-option" data-value="develop" data-next="result">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                </span>
                <span class="option-label">Develop my own research program</span>
              </button>
              <button class="quiz-option" data-value="lead" data-next="result">
                <span class="option-icon">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </span>
                <span class="option-label">Lead multi-site research & mentor others</span>
              </button>
            </div>
            <button class="quiz-back" data-back="3">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back
            </button>
          </div>

          <!-- Results -->
          <div class="quiz-result" id="quiz-result">
            <div class="result-icon">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="result-title">Your Best Fit:</h4>
            <div class="result-role" id="result-role">Graduate Student (MS/PhD)</div>
            <p class="result-description" id="result-description">Based on your answers, you'd be a great fit for our graduate program.</p>
            <div class="result-actions">
              <a href="#opportunities" class="btn btn-primary btn-sm">View Position Details</a>
              <button class="btn btn-ghost btn-sm quiz-restart" id="quiz-restart">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Retake Quiz
              </button>
            </div>
          </div>
        </div>

        <!-- Fit Checklist (always visible below quiz) -->
        <div class="fit-checklist">
          <h4 class="fit-checklist-title">We're a strong fit if you…</h4>
          <div class="fit-grid">
            <div class="fit-item">
              <svg class="w-5 h-5 text-accent-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Thrive at the intersection of organismal and ecosystem ecology</span>
            </div>
            <div class="fit-item">
              <svg class="w-5 h-5 text-accent-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Enjoy connecting field experiments to quantitative models</span>
            </div>
            <div class="fit-item">
              <svg class="w-5 h-5 text-accent-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Are passionate about decision-relevant science for restoration</span>
            </div>
            <div class="fit-item">
              <svg class="w-5 h-5 text-accent-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Value collaborative, interdisciplinary teamwork</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <WaveDivider id="approach-wave" fillColor="navy-deep" />
  </section>

  <!-- Opportunities -->
  <section id="opportunities" class="section-lg bg-navy-highlight scroll-mt-20">
    <div class="container">
      <div class="text-center mb-12 scroll-reveal">
        <span class="eyebrow">Opportunities</span>
        <h2 class="mb-4">Positions by Role</h2>
      </div>

      <div class="opportunities-grid">
        <!-- Undergraduates -->
        <div class="opp-card scroll-reveal stagger-1">
          <div class="opp-header">
            <span class="opp-badge open">Open</span>
            <h3>Undergraduates</h3>
