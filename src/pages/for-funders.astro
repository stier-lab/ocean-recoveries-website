  {
    item: "PhD Student (1 year)",
    cost: "$45K",
    description: "Stipend + tuition + fees (direct costs)",
    deliverables: "Thesis chapter, 1 publication",
  },
  {
    item: "Undergraduate Researcher",
    cost: "$6K",
    description: "Summer research experience (10 weeks, stipend + housing)",
    deliverables: "Thesis project, conference presentation",
  },
  {
    item: "3D Photogrammetry Survey",
    cost: "$8K",
    description: "Full reef plot mapping: equipment rental, processing, analysis",
    deliverables: "Structural complexity data, growth measurements",
  },
];

// Case studies data - all based on actual published research
