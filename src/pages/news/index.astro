<script>
  const initNewsPage = () => {
    // Elements
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const clearSearch = document.getElementById('clear-search');
    const allPosts = document.querySelectorAll('.post-card, .featured-card');
    const featuredCard = document.querySelector('.featured-card');
    const postsGrid = document.getElementById('posts-grid');
    const noPostsEl = document.getElementById('no-posts');
    const activeFiltersEl = document.getElementById('active-filters');
    const visibleCountEl = document.getElementById('visible-count');
    const loadMoreContainer = document.getElementById('load-more-container');
    const loadMoreBtn = document.getElementById('load-more-btn');
    const clearAllBtn = document.getElementById('clear-all-filters');
    const oaFilter = document.getElementById('oa-filter');
    const sortLabel = document.getElementById('sort-label');

    // State
    let activeTag = 'all';
    let searchQuery = '';
    let openAccessOnly = false;
    let sortOrder = 'newest';
    let visiblePostsCount = 12;

    // Close all dropdowns
    const closeAllDropdowns = () => {
      document.querySelectorAll('.dropdown-menu').forEach(menu => {
        menu.classList.remove('open');
      });
      document.querySelectorAll('.dropdown-trigger').forEach(btn => {
        btn.classList.remove('active');
      });
    };

    // Setup dropdowns
    const setupDropdowns = () => {
      const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');

      dropdownTriggers.forEach(trigger => {
        trigger.addEventListener('click', (e) => {
          e.stopPropagation();
          const menu = trigger.nextElementSibling as HTMLElement;
          const isOpen = menu?.classList.contains('open');
          closeAllDropdowns();
          if (!isOpen && menu) {
            menu.classList.add('open');
            trigger.classList.add('active');
          }
        });
      });

      // Close on outside click
      document.addEventListener('click', closeAllDropdowns);
    };

    // Filter and sort posts
    const filterPosts = () => {
      let visibleCount = 0;
      let shownCount = 0;
      const postsArray = Array.from(allPosts);

      // Sort posts
      if (sortOrder === 'oldest') {
        postsArray.sort((a, b) => {
          const dateA = (a as HTMLElement).dataset.date || '';
          const dateB = (b as HTMLElement).dataset.date || '';
          return dateA.localeCompare(dateB);
        });
      } else {
        postsArray.sort((a, b) => {
          const dateA = (a as HTMLElement).dataset.date || '';
          const dateB = (b as HTMLElement).dataset.date || '';
          return dateB.localeCompare(dateA);
        });
      }

      // Re-append sorted posts (excluding featured)
      const gridPosts = postsArray.filter(p => !p.classList.contains('featured-card'));
      if (postsGrid) {
        gridPosts.forEach(post => postsGrid.appendChild(post));
      }

      postsArray.forEach((post) => {
        const el = post as HTMLElement;
        const postTags = el.dataset.tags?.split(',') || [];
        const postTitle = el.dataset.title || '';
        const postExcerpt = el.dataset.excerpt || '';
        const isOpenAccess = el.dataset.openAccess === 'true';

        // Check filters
        const matchesTag = activeTag === 'all' || postTags.includes(activeTag);
        const matchesSearch = !searchQuery ||
          postTitle.includes(searchQuery.toLowerCase()) ||
          postExcerpt.includes(searchQuery.toLowerCase());
        const matchesOA = !openAccessOnly || isOpenAccess;

        const shouldShow = matchesTag && matchesSearch && matchesOA;

        if (shouldShow) {
          visibleCount++;
          if (!post.classList.contains('featured-card') && shownCount >= visiblePostsCount) {
            post.classList.add('hidden');
          } else {
            post.classList.remove('hidden');
            shownCount++;
          }
        } else {
          post.classList.add('hidden');
        }
      });

      // Update UI
      if (visibleCountEl) {
        visibleCountEl.textContent = String(Math.min(shownCount, visibleCount));
      }

      noPostsEl?.classList.toggle('hidden', visibleCount > 0);

      // Show/hide load more
      const totalVisible = visibleCount - (featuredCard && !featuredCard.classList.contains('hidden') ? 1 : 0);
      loadMoreContainer?.classList.toggle('hidden', shownCount >= totalVisible || visibleCount === 0);

      updateActiveFilters();
    };

    // Update active filters display
    const updateActiveFilters = () => {
      if (!activeFiltersEl) return;

      const filters: string[] = [];

      if (activeTag !== 'all') {
        filters.push(activeTag);
      }
      if (searchQuery) {
        filters.push(`"${searchQuery}"`);
      }
      if (openAccessOnly) {
        filters.push('Open Access');
      }

      if (filters.length === 0) {
        activeFiltersEl.innerHTML = '';
        return;
      }

      activeFiltersEl.innerHTML = filters.map(f => `
        <span class="active-filter-tag">
          ${f}
          <button class="remove-filter" data-filter="${f}">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </span>
      `).join('') + `
        <button class="clear-filters-btn">Clear all</button>
      `;

      // Add event listeners
      activeFiltersEl.querySelectorAll('.remove-filter').forEach(btn => {
        btn.addEventListener('click', () => {
          const filter = (btn as HTMLElement).dataset.filter;
          if (filter === 'Open Access') {
            openAccessOnly = false;
            oaFilter?.classList.remove('active');
          } else if (filter?.startsWith('"')) {
            searchQuery = '';
            if (searchInput) searchInput.value = '';
            clearSearch?.classList.add('hidden');
          } else {
            activeTag = 'all';
            updateChipStates();
          }
          filterPosts();
        });
      });

      activeFiltersEl.querySelector('.clear-filters-btn')?.addEventListener('click', clearAllFilters);
    };

    // Update chip states
    const updateChipStates = () => {
      document.querySelectorAll('.filter-chip[data-tag]').forEach(chip => {
        chip.classList.toggle('active', (chip as HTMLElement).dataset.tag === activeTag);
      });
      document.querySelectorAll('.dropdown-item[data-tag]').forEach(item => {
        item.classList.toggle('active', (item as HTMLElement).dataset.tag === activeTag);
      });
    };

    // Clear all filters
    const clearAllFilters = () => {
      activeTag = 'all';
      searchQuery = '';
      openAccessOnly = false;
      if (searchInput) searchInput.value = '';
      clearSearch?.classList.add('hidden');
      oaFilter?.classList.remove('active');
      updateChipStates();
      filterPosts();
    };

    // Setup filter chips
    document.querySelectorAll('.filter-chip[data-tag]').forEach(chip => {
      chip.addEventListener('click', () => {
        activeTag = (chip as HTMLElement).dataset.tag || 'all';
        updateChipStates();
        closeAllDropdowns();
        filterPosts();
      });
    });

    // Setup dropdown items
    document.querySelectorAll('.dropdown-item[data-tag]').forEach(item => {
      item.addEventListener('click', () => {
        activeTag = (item as HTMLElement).dataset.tag || 'all';
        updateChipStates();
        closeAllDropdowns();
        filterPosts();
      });
    });

    // Setup sort dropdown
    document.querySelectorAll('.dropdown-item[data-sort]').forEach(item => {
      item.addEventListener('click', () => {
        sortOrder = (item as HTMLElement).dataset.sort || 'newest';
        document.querySelectorAll('.dropdown-item[data-sort]').forEach(i => i.classList.remove('active'));
        item.classList.add('active');
        if (sortLabel) sortLabel.textContent = sortOrder === 'newest' ? 'Newest' : 'Oldest';
        closeAllDropdowns();
        filterPosts();
      });
    });

    // Setup search
    searchInput?.addEventListener('input', () => {
      searchQuery = searchInput.value.trim();
      clearSearch?.classList.toggle('hidden', !searchQuery);
      filterPosts();
    });

    clearSearch?.addEventListener('click', () => {
      searchQuery = '';
      if (searchInput) searchInput.value = '';
      clearSearch.classList.add('hidden');
      filterPosts();
    });

    // Setup OA filter
    oaFilter?.addEventListener('click', () => {
      openAccessOnly = !openAccessOnly;
      oaFilter.classList.toggle('active', openAccessOnly);
      filterPosts();
    });

    // Load more
    loadMoreBtn?.addEventListener('click', () => {
      visiblePostsCount += 12;
      filterPosts();
    });

    // Clear all button
    clearAllBtn?.addEventListener('click', clearAllFilters);

    // Setup share buttons
    document.querySelectorAll('.action-share, .action-btn-sm.action-share').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();

        const button = e.currentTarget as HTMLElement;
        const title = button.dataset.title || '';
        const url = window.location.origin + (button.dataset.url || '');

        if (navigator.share) {
          try {
            await navigator.share({ title, url });
            return;
          } catch {
            // Fall through to copy
          }
        }

        try {
          await navigator.clipboard.writeText(url);
          const span = button.querySelector('span');
          const originalText = span?.textContent;
          if (span) span.textContent = 'Copied!';
          button.classList.add('copied');

          setTimeout(() => {
            if (span) span.textContent = originalText || 'Share';
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });

    // Initialize
    setupDropdowns();
    filterPosts();
  };

  initNewsPage();
  document.addEventListener('astro:after-swap', initNewsPage);
</script>
