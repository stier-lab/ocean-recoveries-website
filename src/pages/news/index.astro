---
import Layout from '@layouts/Layout.astro';
import { posts } from '@data/posts';

// Sort posts by date (newest first)
const sortedPosts = [...posts].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Get unique tags
const allTags = [...new Set(posts.flatMap((p) => p.tags))].sort();

// Format date
const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Layout
  title="News"
  description="Latest news, research updates, and stories from the Ocean Recoveries Lab at UC Santa Barbara."
>
  <!-- Hero -->
  <section class="relative py-16 md:py-20 overflow-hidden bg-navy-deep">
    <div class="container text-center text-white">
      <h1 class="text-white mb-4">News & Updates</h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        Research highlights, lab news, and stories from the field.
      </p>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="section bg-surface">
    <div class="container">
      <!-- Tag filters -->
      <div class="flex flex-wrap gap-2 mb-10 scroll-reveal">
        <button class="chip active" data-tag="all">All Posts</button>
        {allTags.map((tag) => (
          <button class="chip" data-tag={tag}>{tag}</button>
        ))}
      </div>

      <!-- Posts -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="posts-grid">
        {sortedPosts.map((post, i) => (
          <article
            class={`post-card scroll-reveal stagger-${(i % 6) + 1}`}
            data-tags={post.tags.join(',')}
          >
            <a href={`/news/${post.slug}`} class="post-link">
              <div class="post-image img-zoom">
                <img src={post.featuredImage} alt={post.title} loading="lazy" />
              </div>
              <div class="post-content">
                <div class="post-meta">
                  <time datetime={post.date}>{formatDate(post.date)}</time>
                  <span class="meta-sep">•</span>
                  <span>{post.author}</span>
                  {post.openAccess && (
                    <>
                      <span class="meta-sep">•</span>
                      <span class="open-access-badge">Open Access</span>
                    </>
                  )}
                </div>
                <h2 class="post-title">{post.title}</h2>
                <p class="post-excerpt">{post.excerpt}</p>
                <div class="post-tags">
                  {post.tags.slice(0, 3).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </div>
            </a>
            {/* Quick Actions Bar */}
            <div class="post-actions">
              {post.pdfUrl && (
                <a
                  href={post.pdfUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="action-btn action-pdf"
                  title="Download PDF"
                  onclick="event.stopPropagation();"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <span>PDF</span>
                </a>
              )}
              {post.doiUrl && (
                <a
                  href={post.doiUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="action-btn action-doi"
                  title="View Publication"
                  onclick="event.stopPropagation();"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  <span>DOI</span>
                </a>
              )}
              <button
                class="action-btn action-share"
                title="Share"
                data-title={post.title}
                data-url={`/news/${post.slug}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                </svg>
                <span>Share</span>
              </button>
            </div>
          </article>
        ))}
      </div>

      <!-- Empty state -->
      <div id="no-posts" class="hidden text-center py-16">
        <p class="text-muted text-lg">
          No posts found with that tag.
        </p>
        <button class="btn btn-secondary mt-4" id="clear-filter">
          Show All Posts
        </button>
      </div>
    </div>
  </section>

  <!-- Subscribe CTA -->
  <section class="section bg-navy-highlight">
    <div class="container">
      <div class="max-w-xl mx-auto text-center scroll-reveal">
        <h2 class="mb-4">Stay Updated</h2>
        <p class="text-muted mb-6">
          Follow our lab on social media or check back here for the latest updates on our research.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="https://twitter.com/staboratory"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary"
          >
            Follow on Twitter
          </a>
          <a
            href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary"
          >
            Google Scholar
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .post-card {
    @apply bg-surface-card rounded-xl border border-line overflow-hidden;
    @apply transition-all duration-300;
  }

  .post-card:hover {
    @apply -translate-y-1 shadow-lg border-accent/30;
  }

  .post-card.hidden {
    @apply !hidden;
  }

  .post-link {
    @apply block no-underline;
  }

  .post-image {
    @apply aspect-video overflow-hidden;
  }

  .post-image img {
    @apply w-full h-full object-cover;
  }

  .post-content {
    @apply p-5;
  }

  .post-meta {
    @apply flex items-center gap-2 text-sm text-muted mb-2;
  }

  .meta-sep {
    @apply text-line;
  }

  .post-title {
    @apply text-lg font-bold text-ink mb-2 line-clamp-2;
    @apply transition-colors;
  }

  .post-card:hover .post-title {
    @apply text-accent;
  }

  .post-excerpt {
    @apply text-sm text-muted line-clamp-2 mb-4;
  }

  .post-tags {
    @apply flex flex-wrap gap-2;
  }

  .post-tags .tag {
    @apply px-2 py-1 text-xs font-semibold rounded-md;
    @apply bg-line/50 text-muted;
  }

  .open-access-badge {
    @apply text-green-400 font-medium;
  }

  /* Filter chip states */
  .chip {
    @apply cursor-pointer;
  }

  .chip:not(.active) {
    @apply opacity-70;
  }

  .chip:not(.active):hover {
    @apply opacity-100;
  }

  /* Post action buttons */
  .post-actions {
    @apply flex items-center gap-2 px-5 py-3 border-t border-line bg-surface-card/50;
  }

  .action-btn {
    @apply inline-flex items-center gap-1.5 px-3 py-1.5 rounded-md text-xs font-medium;
    @apply transition-all duration-200 cursor-pointer;
    @apply border border-transparent;
  }

  .action-pdf {
    @apply bg-red-500/10 text-red-400 hover:bg-red-500 hover:text-white;
  }

  .action-doi {
    @apply bg-blue-500/10 text-blue-400 hover:bg-blue-500 hover:text-white;
  }

  .action-share {
    @apply bg-accent/10 text-accent hover:bg-accent hover:text-white ml-auto;
  }

  .action-share.copied {
    @apply bg-green-500 text-white;
  }
</style>

<script>
  const initFilters = () => {
    const chips = document.querySelectorAll('.chip[data-tag]');
    const posts = document.querySelectorAll('.post-card');
    const noPosts = document.getElementById('no-posts');
    const clearBtn = document.getElementById('clear-filter');

    const filterPosts = (tag: string) => {
      let visibleCount = 0;

      posts.forEach((post) => {
        const postTags = (post as HTMLElement).dataset.tags?.split(',') || [];
        const show = tag === 'all' || postTags.includes(tag);

        post.classList.toggle('hidden', !show);
        if (show) visibleCount++;
      });

      // Show/hide empty state
      noPosts?.classList.toggle('hidden', visibleCount > 0);

      // Update active chip
      chips.forEach((chip) => {
        chip.classList.toggle('active', (chip as HTMLElement).dataset.tag === tag);
      });
    };

    chips.forEach((chip) => {
      chip.addEventListener('click', () => {
        const tag = (chip as HTMLElement).dataset.tag || 'all';
        filterPosts(tag);
      });
    });

    clearBtn?.addEventListener('click', () => filterPosts('all'));
  };

  initFilters();
  document.addEventListener('astro:after-swap', initFilters);

  // Share button functionality
  const initShareButtons = () => {
    const shareButtons = document.querySelectorAll('.action-share');

    shareButtons.forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();

        const button = e.currentTarget as HTMLElement;
        const title = button.dataset.title || '';
        const url = window.location.origin + (button.dataset.url || '');

        // Try native share API first (mobile)
        if (navigator.share) {
          try {
            await navigator.share({ title, url });
            return;
          } catch (err) {
            // User cancelled or error, fall through to copy
          }
        }

        // Fallback: copy to clipboard
        try {
          await navigator.clipboard.writeText(url);
          const span = button.querySelector('span');
          const originalText = span?.textContent;
          if (span) span.textContent = 'Copied!';
          button.classList.add('copied');

          setTimeout(() => {
            if (span) span.textContent = originalText || 'Share';
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  };

  initShareButtons();
  document.addEventListener('astro:after-swap', initShareButtons);
</script>
