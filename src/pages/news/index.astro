---
import Layout from '@layouts/Layout.astro';
import { posts } from '@data/posts';

// Sort posts by date (newest first)
const sortedPosts = [...posts].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Get unique tags with counts
const tagCounts = posts.reduce((acc, post) => {
  post.tags.forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// Separate year tags from topic tags
const yearTags = Object.keys(tagCounts).filter(tag => /^\d{4}$/.test(tag)).sort((a, b) => Number(b) - Number(a));
const topicTags = Object.keys(tagCounts).filter(tag => !/^\d{4}$/.test(tag) && tag !== 'Publication').sort();

// Topic category config with colors
const topicConfig: Record<string, { color: string; label: string }> = {
  'Coral': { color: '#f97316', label: 'Coral Reefs' },
  'Kelp': { color: '#22c55e', label: 'Kelp Forests' },
  'Climate': { color: '#ef4444', label: 'Climate Change' },
  'Conservation': { color: '#3b82f6', label: 'Conservation' },
  'Ecology': { color: '#10b981', label: 'Ecology' },
  'Symbiosis': { color: '#8b5cf6', label: 'Symbiosis' },
  'Fisheries': { color: '#06b6d4', label: 'Fisheries' },
  'Management': { color: '#f59e0b', label: 'Management' },
  'Recovery': { color: '#14b8a6', label: 'Recovery' },
};

const getTopicColor = (tags: string[]) => {
  const topic = tags.find(t => topicConfig[t]);
  return topic ? topicConfig[topic].color : '#38bdf8';
};

// Format date
const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
};

// Calculate reading time
const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.max(1, Math.ceil(words / 200));
};

// Get display tags (non-year, non-Publication)
const getDisplayTags = (tags: string[]) => {
  return tags.filter(t => !/^\d{4}$/.test(t) && t !== 'Publication');
};

// Bento grid posts - first 5 posts get special treatment
const heroPost = sortedPosts[0];
const secondaryPosts = sortedPosts.slice(1, 3);
const tertiaryPosts = sortedPosts.slice(3, 5);
const remainingPosts = sortedPosts.slice(5);
---

<Layout
  title="News & Research"
  description="Latest news, research updates, and stories from the Ocean Recoveries Lab at UC Santa Barbara."
>
  <!-- Skip to content link for accessibility -->
  <a href="#main-content" class="skip-to-content">Skip to main content</a>

  <!-- Compact Header + Filters -->
  <section class="filters-section" aria-label="Filter articles">
    <div class="container">
      <!-- Header Row: Title + Search -->
      <div class="filters-header">
        <h1 class="page-title">News & Research</h1>
        <div class="header-controls">
          <div class="search-wrapper">
            <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input
              type="search"
              id="search-input"
              placeholder="Search..."
              class="search-input"
              aria-label="Search articles"
              autocomplete="off"
            />
            <button id="clear-search" class="clear-btn hidden" aria-label="Clear search">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <select id="sort-select" class="sort-select" aria-label="Sort articles">
            <option value="newest">Newest</option>
            <option value="oldest">Oldest</option>
          </select>
        </div>
      </div>

      <!-- Filter Pills Row -->
      <div class="filters-row">
        <div class="filter-pills" role="group" aria-label="Topic filters">
          <button class="pill active" data-tag="all" aria-pressed="true">All</button>
          {topicTags.slice(0, 5).map(topic => (
            <button
              class="pill"
              data-tag={topic}
              style={`--pill-color: ${topicConfig[topic]?.color || '#38bdf8'}`}
              aria-pressed="false"
            >
              {topic}
            </button>
          ))}
          <!-- Year Dropdown -->
          <div class="dropdown">
            <button class="pill dropdown-btn" id="year-btn" aria-haspopup="listbox" aria-expanded="false">
              <span class="dropdown-label">Year</span>
              <svg class="dropdown-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="dropdown-panel" id="year-panel" role="listbox">
              {yearTags.map(year => (
                <button class="dropdown-option" data-tag={year} role="option" aria-selected="false">
                  {year}
                </button>
              ))}
            </div>
          </div>
          <!-- Open Access Toggle -->
          <button class="pill pill-oa" id="oa-filter" aria-pressed="false" title="Open Access only">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
            </svg>
            <span class="oa-label">Open Access</span>
          </button>
        </div>
        <div class="filter-meta">
          <div class="active-filters" id="active-filters" role="status" aria-live="polite"></div>
          <span class="results-count" id="results-text">{sortedPosts.length} articles</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main id="main-content" class="bento-section">
    <div class="container">
      <!-- Bento Grid -->
      <div class="bento-grid" id="bento-grid">
        <!-- Hero Card (Large) -->
        <article
          class="bento-card bento-hero"
          data-tags={heroPost.tags.join(',')}
          data-title={heroPost.title.toLowerCase()}
          data-excerpt={heroPost.excerpt.toLowerCase()}
          data-open-access={heroPost.openAccess ? 'true' : 'false'}
          data-date={heroPost.date}
        >
          <a href={`/news/${heroPost.slug}`} class="card-link">
            <div class="card-image">
              <img
                src={heroPost.featuredImage}
                alt=""
                loading="eager"
                decoding="async"
              />
              <div class="card-overlay"></div>
            </div>
            <div class="card-content">
              <div class="card-badges">
                <span class="badge badge-new">Latest</span>
                {heroPost.openAccess && <span class="badge badge-oa">Open Access</span>}
              </div>
              <div class="card-tags">
                {getDisplayTags(heroPost.tags).slice(0, 2).map(tag => (
                  <span class="tag" style={`--tag-color: ${topicConfig[tag]?.color || '#38bdf8'}`}>{tag}</span>
                ))}
              </div>
              <h2 class="card-title">{heroPost.title}</h2>
              <p class="card-excerpt">{heroPost.excerpt}</p>
              <div class="card-meta">
                <span class="meta-author">{heroPost.author}</span>
                <span class="meta-dot" aria-hidden="true"></span>
                <time datetime={heroPost.date}>{formatDate(heroPost.date)}</time>
                <span class="meta-dot" aria-hidden="true"></span>
                <span>{getReadingTime(heroPost.content)} min read</span>
              </div>
            </div>
          </a>
          <div class="card-actions">
            {heroPost.pdfUrl && (
              <a href={heroPost.pdfUrl} target="_blank" rel="noopener noreferrer" class="action-link action-pdf">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                PDF
              </a>
            )}
            {heroPost.doiUrl && (
              <a href={heroPost.doiUrl} target="_blank" rel="noopener noreferrer" class="action-link action-doi">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Paper
              </a>
            )}
          </div>
        </article>

        <!-- Secondary Cards (Medium) -->
        {secondaryPosts.map((post, i) => (
          <article
            class={`bento-card bento-medium bento-medium-${i + 1}`}
            data-tags={post.tags.join(',')}
            data-title={post.title.toLowerCase()}
            data-excerpt={post.excerpt.toLowerCase()}
            data-open-access={post.openAccess ? 'true' : 'false'}
            data-date={post.date}
          >
            <a href={`/news/${post.slug}`} class="card-link">
              <div class="card-image">
                <img src={post.featuredImage} alt="" loading="lazy" decoding="async" />
                <div class="card-overlay"></div>
              </div>
              <div class="card-content">
                {post.openAccess && <span class="badge badge-oa badge-float">OA</span>}
                <div class="card-tags">
                  {getDisplayTags(post.tags).slice(0, 1).map(tag => (
                    <span class="tag" style={`--tag-color: ${topicConfig[tag]?.color || '#38bdf8'}`}>{tag}</span>
                  ))}
                </div>
                <h3 class="card-title">{post.title}</h3>
                <div class="card-meta">
                  <time datetime={post.date}>{formatDate(post.date)}</time>
                  <span class="meta-dot" aria-hidden="true"></span>
                  <span>{getReadingTime(post.content)} min</span>
                </div>
              </div>
            </a>
          </article>
        ))}

        <!-- Tertiary Cards (Compact) -->
        {tertiaryPosts.map((post) => (
          <article
            class="bento-card bento-compact"
            data-tags={post.tags.join(',')}
            data-title={post.title.toLowerCase()}
            data-excerpt={post.excerpt.toLowerCase()}
            data-open-access={post.openAccess ? 'true' : 'false'}
            data-date={post.date}
          >
            <a href={`/news/${post.slug}`} class="card-link card-link-horizontal">
              <div class="card-thumb">
                <img src={post.featuredImage} alt="" loading="lazy" decoding="async" />
                {post.openAccess && <span class="thumb-badge" title="Open Access">OA</span>}
              </div>
              <div class="card-info">
                <span class="info-tag" style={`--tag-color: ${getTopicColor(post.tags)}`}>
                  {getDisplayTags(post.tags)[0] || 'Research'}
                </span>
                <h4 class="info-title">{post.title}</h4>
                <span class="info-date">{formatDate(post.date)}</span>
              </div>
            </a>
          </article>
        ))}
      </div>

      <!-- Standard Grid for Remaining Posts -->
      <div class="posts-grid" id="posts-grid">
        {remainingPosts.map((post, i) => (
          <article
            class="post-card"
            data-tags={post.tags.join(',')}
            data-title={post.title.toLowerCase()}
            data-excerpt={post.excerpt.toLowerCase()}
            data-open-access={post.openAccess ? 'true' : 'false'}
            data-date={post.date}
            style={`--delay: ${(i % 6) * 0.05}s`}
          >
            <a href={`/news/${post.slug}`} class="post-link">
              <div class="post-image">
                <img src={post.featuredImage} alt="" loading="lazy" decoding="async" />
                {post.openAccess && (
                  <span class="post-oa" title="Open Access">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                    </svg>
                  </span>
                )}
              </div>
              <div class="post-body">
                <div class="post-top">
                  <span class="post-tag" style={`--tag-color: ${getTopicColor(post.tags)}`}>
                    {getDisplayTags(post.tags)[0] || 'Research'}
                  </span>
                  <span class="post-date">{formatDate(post.date)}</span>
                </div>
                <h3 class="post-title">{post.title}</h3>
                <p class="post-excerpt">{post.excerpt}</p>
              </div>
            </a>
            <div class="post-footer">
              <span class="post-author">{post.author}</span>
              <div class="post-actions">
                {post.pdfUrl && (
                  <a href={post.pdfUrl} target="_blank" rel="noopener noreferrer" class="post-action" title="Download PDF">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </a>
                )}
                {post.doiUrl && (
                  <a href={post.doiUrl} target="_blank" rel="noopener noreferrer" class="post-action" title="View paper">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="empty-state hidden" role="status">
        <div class="empty-icon" aria-hidden="true">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <h3 class="empty-title">No articles found</h3>
        <p class="empty-text">Try adjusting your search or filters to find what you're looking for</p>
        <button class="empty-btn" id="clear-all">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Reset all filters
        </button>
      </div>

      <!-- Load More -->
      <div class="load-more" id="load-more">
        <button class="load-btn" id="load-btn">
          <span class="load-text">Show more articles</span>
          <span class="load-spinner hidden" aria-hidden="true">
            <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </span>
          <svg class="load-chevron w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <span class="load-count" id="load-count"></span>
      </div>
    </div>
  </main>

  <!-- CTA -->
  <section class="cta-section" aria-labelledby="cta-title">
    <div class="container">
      <div class="cta-card">
        <div class="cta-icon" aria-hidden="true">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
        <div class="cta-content">
          <h2 id="cta-title" class="cta-title">Stay updated on our research</h2>
          <p class="cta-text">Follow along as we publish new findings on coral reef and kelp forest ecosystems</p>
        </div>
        <div class="cta-links">
          <a href="https://twitter.com/staboratory" target="_blank" rel="noopener noreferrer" class="cta-link">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            <span>Twitter</span>
          </a>
          <a href="https://scholar.google.com/citations?user=bxbOvMgAAAAJ" target="_blank" rel="noopener noreferrer" class="cta-link">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
            </svg>
            <span>Google Scholar</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Skip Link */
  .skip-to-content {
    @apply absolute left-4 top-4 z-[100] px-4 py-2 rounded-lg font-medium;
    @apply bg-accent text-white no-underline;
    @apply transform -translate-y-20 opacity-0;
    @apply focus:translate-y-0 focus:opacity-100;
    @apply transition-all duration-200;
  }

  /* Filters Section - Now the main header */
  .filters-section {
    @apply pt-6 pb-4 bg-surface sticky top-0 z-40;
    @apply border-b border-line/30;
  }

  /* Header Row */
  .filters-header {
    @apply flex items-center justify-between gap-4 mb-4;
  }

  .page-title {
    @apply text-2xl md:text-3xl font-bold m-0;
    background: linear-gradient(135deg, #f1f5f9 0%, #38bdf8 50%, #2dd4bf 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .header-controls {
    @apply flex items-center gap-2;
  }

  .search-wrapper {
    @apply relative;
  }

  .search-icon {
    @apply absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-muted pointer-events-none;
  }

  .search-input {
    @apply w-40 md:w-48 pl-9 pr-8 py-2 rounded-lg text-sm;
    @apply bg-surface-card border border-line text-ink placeholder-muted;
    @apply focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent/30 focus:w-64;
    @apply transition-all;
  }

  .clear-btn {
    @apply absolute right-2 top-1/2 -translate-y-1/2 p-1 rounded;
    @apply text-muted hover:text-ink;
    @apply transition-colors cursor-pointer;
  }

  .clear-btn.hidden { @apply invisible opacity-0; }

  .sort-select {
    @apply px-3 py-2 rounded-lg text-sm;
    @apply bg-surface-card border border-line text-ink;
    @apply focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent/30;
    @apply cursor-pointer;
  }

  /* Filter Pills Row */
  .filters-row {
    @apply flex items-center justify-between gap-4 flex-wrap;
  }

  .filter-pills {
    @apply flex items-center gap-2 flex-wrap;
  }

  .pill {
    @apply px-3 py-1.5 rounded-lg text-sm font-medium;
    @apply bg-transparent border border-line text-muted;
    @apply hover:border-accent/50 hover:text-ink;
    @apply transition-colors cursor-pointer;
    @apply focus:outline-none focus:ring-2 focus:ring-accent/30;
  }

  .pill.active {
    @apply bg-accent border-accent text-white;
  }

  .pill:not(.active):hover {
    border-color: var(--pill-color, #38bdf8);
    color: var(--pill-color, #38bdf8);
  }

  .pill-oa {
    @apply flex items-center gap-1.5;
  }

  .pill-oa .oa-label {
    @apply hidden sm:inline;
  }

  .pill-oa.active {
    @apply bg-green-500 border-green-500;
  }

  .dropdown {
    @apply relative;
  }

  .dropdown-btn {
    @apply flex items-center gap-1;
  }

  .dropdown-chevron {
    @apply w-3.5 h-3.5 transition-transform duration-200;
  }

  .dropdown-btn[aria-expanded="true"] .dropdown-chevron {
    @apply rotate-180;
  }

  .dropdown-panel {
    @apply absolute top-full left-0 mt-1 py-1 min-w-[100px];
    @apply bg-surface-card border border-line rounded-lg shadow-xl;
    @apply opacity-0 invisible -translate-y-1;
    @apply transition-all duration-150 z-50;
  }

  .dropdown-panel.open {
    @apply opacity-100 visible translate-y-0;
  }

  .dropdown-option {
    @apply block w-full px-3 py-2 text-sm text-muted text-left;
    @apply hover:bg-accent/10 hover:text-accent;
    @apply transition-colors cursor-pointer;
    @apply focus:outline-none focus:bg-accent/10 focus:text-accent;
  }

  .dropdown-option[aria-selected="true"],
  .dropdown-option.active {
    @apply bg-accent/10 text-accent;
  }

  /* Filter Meta */
  .filter-meta {
    @apply flex items-center gap-3;
  }

  .active-filters {
    @apply flex flex-wrap items-center gap-2;
  }

  .active-filters:empty { @apply hidden; }

  .filter-tag {
    @apply inline-flex items-center gap-1 px-2 py-1 rounded text-xs font-medium;
    @apply bg-accent/10 text-accent;
  }

  .filter-tag button {
    @apply p-0.5 rounded hover:bg-accent/20 cursor-pointer transition-colors;
  }

  .clear-all-btn {
    @apply text-xs text-muted hover:text-accent cursor-pointer transition-colors ml-1;
  }

  .results-count {
    @apply text-sm text-muted whitespace-nowrap;
  }

  /* Bento Section */
  .bento-section {
