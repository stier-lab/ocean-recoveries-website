<script>
  const initArticle = () => {
    // Reading progress bar
    const progressBar = document.getElementById('reading-progress');
    const article = document.querySelector('.article-body');

    if (progressBar && article) {
      const updateProgress = () => {
        const articleTop = article.getBoundingClientRect().top + window.scrollY;
        const articleHeight = article.scrollHeight;
        const windowHeight = window.innerHeight;
        const scrolled = window.scrollY - articleTop + windowHeight;
        const progress = Math.min(Math.max(scrolled / articleHeight * 100, 0), 100);
        progressBar.style.width = `${progress}%`;
      };

      window.addEventListener('scroll', updateProgress, { passive: true });
      updateProgress();
    }

    // Back to top button
    const backToTop = document.getElementById('back-to-top');
    if (backToTop) {
      const toggleBackToTop = () => {
        backToTop.classList.toggle('visible', window.scrollY > 500);
      };

      window.addEventListener('scroll', toggleBackToTop, { passive: true });
      toggleBackToTop();

      backToTop.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }

    // Copy link button
    const copyLinkBtn = document.getElementById('copy-link-btn');
    if (copyLinkBtn) {
      copyLinkBtn.addEventListener('click', async () => {
        const url = copyLinkBtn.dataset.url;
        const textSpan = copyLinkBtn.querySelector('.copy-text');

        try {
          await navigator.clipboard.writeText(url || window.location.href);
          copyLinkBtn.classList.add('copied');
          if (textSpan) textSpan.textContent = 'Copied!';

          setTimeout(() => {
            copyLinkBtn.classList.remove('copied');
            if (textSpan) textSpan.textContent = 'Copy Link';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }

    // Copy citation button
    const copyCitationBtn = document.getElementById('copy-citation');
    if (copyCitationBtn) {
      copyCitationBtn.addEventListener('click', async () => {
        const citation = copyCitationBtn.dataset.citation;
        const textSpan = copyCitationBtn.querySelector('.btn-text');

        try {
          await navigator.clipboard.writeText(citation || '');
          copyCitationBtn.classList.add('copied');
          if (textSpan) textSpan.textContent = 'Copied!';

          setTimeout(() => {
            copyCitationBtn.classList.remove('copied');
            if (textSpan) textSpan.textContent = 'Copy';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }

    // TOC Scroll Spy
    const tocLinks = document.querySelectorAll('.toc-link');
    const tocProgressBar = document.getElementById('toc-progress-bar');

    if (tocLinks.length > 0) {
      // Get all section IDs from TOC links
      const sectionIds = Array.from(tocLinks).map(link =>
        (link as HTMLAnchorElement).getAttribute('data-toc-id')
      ).filter(Boolean) as string[];

      const sections = sectionIds
        .map(id => document.getElementById(id))
        .filter(Boolean) as HTMLElement[];

      const updateTocHighlight = () => {
        const scrollPosition = window.scrollY + 150; // Offset for better UX

        let currentSection = '';
        let passedSections = 0;

        sections.forEach((section, index) => {
          const sectionTop = section.getBoundingClientRect().top + window.scrollY;

          if (scrollPosition >= sectionTop - 100) {
            currentSection = section.id;
            passedSections = index + 1;
          }
        });

        // Update active state on TOC links
        tocLinks.forEach(link => {
          const linkId = (link as HTMLAnchorElement).getAttribute('data-toc-id');
          link.classList.toggle('active', linkId === currentSection);
        });

        // Update TOC progress bar
        if (tocProgressBar && sections.length > 0) {
          const progress = (passedSections / sections.length) * 100;
          tocProgressBar.style.width = `${progress}%`;
        }
      };

      window.addEventListener('scroll', updateTocHighlight, { passive: true });
      updateTocHighlight();

      // Smooth scroll for TOC links
      tocLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = (link as HTMLAnchorElement).getAttribute('href')?.slice(1);
          if (targetId) {
            const target = document.getElementById(targetId);
            if (target) {
              const offset = 100;
              const targetPosition = target.getBoundingClientRect().top + window.scrollY - offset;
              window.scrollTo({ top: targetPosition, behavior: 'smooth' });
            }
          }
        });
      });
    }
  };

  initArticle();
  document.addEventListener('astro:after-swap', initArticle);
</script>
