---
import Layout from '@layouts/Layout.astro';
import Breadcrumbs from '@components/layout/Breadcrumbs.astro';
import ArticleSchema from '@components/seo/ArticleSchema.astro';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import { posts } from '@data/posts';

export function getStaticPaths() {
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// Calculate reading time (average 200 words per minute)
const wordCount = post.content.split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

// Extract key findings from content (sentences with numbers/percentages or key phrases)
const extractKeyFindings = (content: string): string[] => {
  const sentences = content.split(/[.!?]+/).filter(s => s.trim().length > 20);
  const findings: string[] = [];

  for (const sentence of sentences) {
    // Look for sentences with statistics, percentages, or key finding indicators
    if (
      /\d+%|\d+x|\d+-fold|increased|decreased|found that|revealed|discovered|showed|demonstrated/i.test(sentence) &&
      !/citation|doi|paper|read the full/i.test(sentence)
    ) {
      const cleaned = sentence.trim().replace(/^\*+|\*+$/g, '').trim();
      if (cleaned.length > 30 && cleaned.length < 200 && findings.length < 3) {
        findings.push(cleaned);
      }
    }
  }

  return findings;
};

// Extract a pull quote (a compelling sentence for highlighting)
const extractPullQuote = (content: string): string | null => {
  const sentences = content.split(/[.!?]+/).filter(s => s.trim().length > 40 && s.trim().length < 180);
  for (const sentence of sentences) {
    if (/remarkable|surprising|troubling|critical|essential|unprecedented|striking/i.test(sentence) &&
        !/citation|doi/i.test(sentence)) {
      return sentence.trim() + '.';
    }
  }
  return null;
};

const keyFindings = extractKeyFindings(post.content);
const pullQuote = extractPullQuote(post.content);

// Get related posts (same tags, excluding current)
const relatedPosts = posts
  .filter((p) => p.slug !== post.slug && p.tags.some((t) => post.tags.includes(t)))
  .slice(0, 3);

const breadcrumbs = [
  { label: 'News', href: '/news' },
  { label: post.title.length > 40 ? post.title.substring(0, 40) + '...' : post.title },
];

// Format citation for copy
const formatCitation = () => {
  const year = new Date(post.date).getFullYear();
  return `${post.author} (${year}). ${post.title}. Ocean Recoveries Lab.${post.doiUrl ? ` ${post.doiUrl}` : ''}`;
};

// Extract headings for table of contents
interface TocItem {
  id: string;
  text: string;
  level: number;
}

const extractTableOfContents = (content: string): TocItem[] => {
  const toc: TocItem[] = [];
  const blocks = content.split('\n\n');

  blocks.forEach((block) => {
    if (block.startsWith('## ')) {
      const text = block.replace('## ', '').trim();
      const id = `section-${text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '')}`;
      toc.push({ id, text, level: 2 });
    }
  });

  // Add static sections that are always present
  toc.push({ id: 'citation', text: 'Citation', level: 2 });
  toc.push({ id: 'share', text: 'Share', level: 2 });

  return toc;
};

const tableOfContents = extractTableOfContents(post.content);
const hasToc = tableOfContents.length > 2; // More than just Citation and Share
---

<Layout
  title={post.title}
  description={post.excerpt}
  image={post.featuredImage}
  keywords={post.tags}
>
  <!-- SEO Structured Data -->
  <ArticleSchema
    title={post.title}
    description={post.excerpt}
    datePublished={post.date}
    image={post.featuredImage}
    authorName={post.author}
    slug={post.slug}
    keywords={post.tags}
  />
  <BreadcrumbSchema
    items={[
      { name: 'News', url: '/news' },
      { name: post.title, url: `/news/${post.slug}` }
    ]}
  />

  <!-- Reading Progress Bar -->
  <div class="reading-progress-container">
    <div class="reading-progress-bar" id="reading-progress"></div>
  </div>

  <article class="article-container">
    <!-- Hero Section - Enhanced -->
    <header class="article-hero">
      <div class="hero-image-container">
        <img
          src={post.featuredImage}
          alt={post.title}
          class="hero-image"
          loading="eager"
        />
        <div class="hero-gradient"></div>
      </div>

      <div class="hero-content">
        <div class="container">
          <Breadcrumbs items={breadcrumbs} class="mb-6" />

          <!-- Meta badges -->
          <div class="hero-meta">
            <div class="flex flex-wrap gap-2 mb-4">
              {post.tags.map((tag) => (
                <span class="tag-badge">{tag}</span>
              ))}
            </div>

            <div class="reading-meta">
              <time datetime={post.date}>{formatDate(post.date)}</time>
              <span class="meta-dot">•</span>
              <span>{readingTime} min read</span>
              {post.openAccess && (
                <>
                  <span class="meta-dot">•</span>
                  <span class="open-access-indicator">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                    </svg>
                    Open Access
                  </span>
                </>
              )}
            </div>
          </div>

          <!-- Title -->
          <h1 class="hero-title">
            <span class="title-text">{post.title}</span>
          </h1>

          <!-- Author -->
          <div class="hero-author">
            <span class="author-label">By</span>
            <span class="author-name">{post.author}</span>
          </div>

          <!-- Action buttons -->
          <div class="hero-actions">
            {post.doiUrl && (
              <a
                href={post.doiUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="action-btn-primary"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Paper
              </a>
            )}
            {post.pdfUrl && (
              <a
                href={post.pdfUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="action-btn-secondary"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Download PDF
              </a>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="article-body">
      <div class="container">
        <div class="article-layout">
          <!-- Sidebar TOC - Desktop Only -->
          {hasToc && (
            <aside class="toc-sidebar" id="toc-sidebar">
              <nav class="toc-nav" aria-label="Table of contents">
                <div class="toc-header">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                  </svg>
                  <span>Contents</span>
                </div>
                <ul class="toc-list">
                  {tableOfContents.map((item) => (
                    <li>
                      <a href={`#${item.id}`} class="toc-link" data-toc-id={item.id}>
                        {item.text}
                      </a>
                    </li>
                  ))}
                </ul>
                <div class="toc-progress">
                  <div class="toc-progress-bar" id="toc-progress-bar"></div>
                </div>
              </nav>
            </aside>
          )}

          <div class="content-wrapper">
          <!-- Key Findings Box -->
          {keyFindings.length > 0 && (
            <aside class="key-findings">
              <div class="key-findings-header">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                <span>Key Findings</span>
              </div>
              <ul class="key-findings-list">
                {keyFindings.map((finding) => (
                  <li>{finding}</li>
                ))}
              </ul>
            </aside>
          )}

          <!-- Article Content -->
          <div class="prose-content">
            {post.content.split('\n\n').map((block, index) => {
              // Insert pull quote after 2nd paragraph
              const showPullQuote = index === 2 && pullQuote;

              if (block.trim() === '---') {
                return <hr class="content-divider" />;
              } else if (block.startsWith('## ')) {
                const headingText = block.replace('## ', '');
                const headingId = `section-${headingText.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '')}`;
                return <h2 class="content-heading" id={headingId}>{headingText}</h2>;
              } else if (block.startsWith('**') && block.endsWith('**')) {
                return <p class="content-bold">{block.replace(/\*\*/g, '')}</p>;
              } else if (block.startsWith('- ')) {
                const items = block.split('\n').map(item => item.replace('- ', ''));
                return (
                  <ul class="content-list">
                    {items.map(item => <li>{item}</li>)}
                  </ul>
                );
              } else if (block.startsWith('1. ')) {
                const items = block.split('\n').map(item => item.replace(/^\d+\. /, ''));
                return (
                  <ol class="content-list-ordered">
                    {items.map(item => <li set:html={item.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>').replace(/\*([^*]+)\*/g, '<em>$1</em>')} />)}
                  </ol>
                );
              } else {
                // Handle bold text, italics, and links within paragraphs
                const processed = block
                  .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
                  .replace(/\*([^*]+)\*/g, '<em>$1</em>')
                  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="content-link" target="_blank" rel="noopener noreferrer">$1</a>');

                return (
                  <>
                    {index === 0 ? (
                      <p class="first-paragraph" set:html={processed} />
                    ) : (
                      <p class="content-paragraph" set:html={processed} />
                    )}
                    {showPullQuote && (
                      <blockquote class="pull-quote">
                        <p>"{pullQuote}"</p>
                      </blockquote>
                    )}
                  </>
                );
              }
            })}
          </div>

          <!-- Citation Section -->
          <section class="citation-section" id="citation">
            <div class="citation-header">
              <h3>Cite this article</h3>
              <button class="copy-citation-btn" id="copy-citation" data-citation={formatCitation()}>
                <svg class="w-4 h-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                </svg>
                <svg class="w-4 h-4 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="btn-text">Copy</span>
              </button>
            </div>
            <div class="citation-box">
              <p>{formatCitation()}</p>
            </div>
          </section>

          <!-- Share Section -->
          <section class="share-section" id="share">
            <h3>Share this article</h3>
            <div class="share-buttons">
              <!-- Twitter/X -->
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn share-twitter"
                title="Share on Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span>Twitter</span>
              </a>

              <!-- LinkedIn -->
              <a
                href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(post.title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn share-linkedin"
                title="Share on LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span>LinkedIn</span>
              </a>

              <!-- Email -->
              <a
                href={`mailto:?subject=${encodeURIComponent(post.title)}&body=${encodeURIComponent(`Check out this research article: ${post.title}\n\n${Astro.url.href}`)}`}
                class="share-btn share-email"
                title="Share via Email"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>Email</span>
              </a>

              <!-- Copy Link -->
              <button
                class="share-btn share-copy"
                title="Copy link to clipboard"
                data-url={Astro.url.href}
                id="copy-link-btn"
              >
                <svg class="w-5 h-5 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                <svg class="w-5 h-5 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="copy-text">Copy Link</span>
              </button>
            </div>
          </section>
        </div>
        </div>
      </div>
    </div>

    <!-- Related Posts - Enhanced -->
    {relatedPosts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <h2 class="related-heading">Related Research</h2>
          <div class="related-grid">
            {relatedPosts.map((related) => (
              <a href={`/news/${related.slug}`} class="related-card group">
                <div class="related-image">
                  <img src={related.featuredImage} alt={related.title} loading="lazy" />
                </div>
                <div class="related-content">
                  <div class="related-meta">
                    <time datetime={related.date}>{formatDate(related.date)}</time>
                    {related.openAccess && (
                      <span class="related-oa">Open Access</span>
                    )}
                  </div>
                  <h3 class="related-title">{related.title}</h3>
                  <p class="related-excerpt">{related.excerpt}</p>
                  <span class="related-link">
                    Read article
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back to Top Button -->
    <button class="back-to-top" id="back-to-top" aria-label="Back to top">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
      </svg>
    </button>
  </article>
</Layout>

<style>
  /* Reading Progress Bar */
  .reading-progress-container {
    @apply fixed top-0 left-0 right-0 h-1 bg-transparent z-50;
  }

  .reading-progress-bar {
    @apply h-full bg-gradient-to-r from-accent to-accent-2 w-0;
    transition: width 0.1s ease-out;
  }

  /* Hero Section */
  .article-hero {
    @apply relative min-h-[60vh] md:min-h-[70vh] flex items-end;
  }

  .hero-image-container {
    @apply absolute inset-0;
  }

  .hero-image {
    @apply w-full h-full object-cover;
  }

  .hero-gradient {
    @apply absolute inset-0;
    background: linear-gradient(
      to top,
      rgba(15, 23, 42, 0.95) 0%,
      rgba(15, 23, 42, 0.7) 40%,
      rgba(15, 23, 42, 0.3) 70%,
      rgba(15, 23, 42, 0.1) 100%
    );
  }

  .hero-content {
    @apply relative z-10 w-full pb-12 pt-32;
  }

  .hero-meta {
    @apply mb-6;
  }

  .tag-badge {
    @apply px-3 py-1.5 rounded-full text-sm font-semibold;
    @apply bg-accent/20 text-accent border border-accent/30;
  }

  .reading-meta {
    @apply flex flex-wrap items-center gap-3 text-white/70 text-sm mt-4;
  }

  .meta-dot {
    @apply text-white/40;
  }

  .open-access-indicator {
    @apply inline-flex items-center gap-1.5 text-green-400 font-medium;
  }

  .hero-title {
    @apply text-fluid-4xl md:text-fluid-5xl font-black leading-tight mb-6 max-w-4xl;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    animation: fadeUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .title-text {
    background: linear-gradient(135deg, #ffffff 0%, #38bdf8 50%, #ffffff 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient-shift 8s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-author {
    @apply text-white/80 text-lg mb-8;
  }

  .author-label {
    @apply text-white/60;
  }

  .author-name {
    @apply font-semibold text-white ml-1;
  }

  .hero-actions {
    @apply flex flex-wrap gap-4;
  }

  .action-btn-primary {
    @apply inline-flex items-center gap-2 px-6 py-3 rounded-xl font-bold;
    @apply bg-accent text-white shadow-lg;
    @apply hover:bg-accent/90 hover:shadow-xl hover:-translate-y-0.5;
    @apply transition-all duration-200 no-underline;
  }

  .action-btn-secondary {
    @apply inline-flex items-center gap-2 px-6 py-3 rounded-xl font-bold;
    @apply bg-white/10 text-white border border-white/20;
    @apply hover:bg-white/20 hover:-translate-y-0.5;
    @apply transition-all duration-200 no-underline;
  }

  /* Article Body */
  .article-body {
    @apply py-16 bg-surface;
  }

  /* Article Layout with TOC Sidebar */
  .article-layout {
    @apply relative;
  }

  @media (min-width: 1280px) {
    .article-layout {
      @apply grid gap-12;
      grid-template-columns: 220px 1fr;
    }
  }

  /* TOC Sidebar */
  .toc-sidebar {
    @apply hidden xl:block;
  }

  .toc-nav {
    @apply sticky top-24 p-4 rounded-xl;
    @apply bg-surface-card/50 border border-line/50 backdrop-blur-sm;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }

  .toc-header {
    @apply flex items-center gap-2 text-xs font-bold uppercase tracking-wider text-muted mb-4 pb-3 border-b border-line/50;
  }

  .toc-list {
    @apply space-y-1 list-none p-0 m-0;
  }

  .toc-link {
    @apply block py-2 px-3 text-sm text-muted rounded-lg no-underline;
    @apply hover:text-ink hover:bg-white/5;
    @apply transition-all duration-200;
    @apply border-l-2 border-transparent;
  }

  .toc-link.active {
    @apply text-accent bg-accent/10 border-l-accent font-medium;
  }

  .toc-progress {
    @apply mt-4 pt-3 border-t border-line/50;
  }

  .toc-progress-bar {
    @apply h-1 bg-gradient-to-r from-accent to-accent-2 rounded-full;
    @apply transition-all duration-150 ease-out;
    width: 0%;
  }

  .content-wrapper {
    @apply max-w-3xl mx-auto xl:mx-0;
  }

  /* Key Findings Box */
  .key-findings {
    @apply mb-12 p-6 rounded-2xl;
    @apply bg-gradient-to-br from-accent/10 to-accent-2/10;
    @apply border border-accent/20;
  }

  .key-findings-header {
    @apply flex items-center gap-2 text-accent font-bold text-lg mb-4;
  }

  .key-findings-list {
    @apply space-y-3 list-none p-0 m-0;
  }

  .key-findings-list li {
    @apply flex items-start gap-3 text-ink-2 leading-relaxed;
  }

  .key-findings-list li::before {
    content: '';
    @apply text-accent font-bold flex-shrink-0 mt-0.5;
  }

  /* Prose Content */
  .prose-content {
