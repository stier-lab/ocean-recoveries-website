---
import Layout from '@layouts/Layout.astro';
import Breadcrumbs from '@components/layout/Breadcrumbs.astro';
import { studySystems, researchPillars } from '@data/research';

const breadcrumbs = [
  { label: 'Research' },
];
---

<Layout
  title="Research"
  description="Ocean Recoveries Lab research: understanding, restoring, and scaling ocean resilience through ecosystem dynamics, conservation science, and quantitative methods."
>
  <!-- Hero -->
  <section class="relative min-h-[60vh] md:min-h-[70vh] flex items-center overflow-hidden">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/blacktip-reef-sharks-split-view-island.jpeg');"
    >
      <div class="absolute inset-0 bg-gradient-to-b from-navy-deep/60 via-navy-deep/50 to-navy-deep/80"></div>
    </div>

    <div class="relative container text-center text-white py-16 md:py-24">
      <Breadcrumbs items={breadcrumbs} class="justify-center mb-6" />
      <span class="eyebrow text-accent-2">Our Research</span>
      <h1 class="text-white mb-4 animate-fade-up">Understanding, Restoring & Scaling Ocean Resilience</h1>
      <p class="text-xl text-white/80 max-w-3xl mx-auto mb-10">
        We integrate ecological theory, quantitative methods, and field studies with a commitment to open science
        and decision support â€” moving insights from lab and field to classrooms, observatories, and coastal decision tables.
      </p>

      <!-- Quick navigation -->
      <nav class="jump-nav flex flex-wrap justify-center gap-3" aria-label="Jump to section">
        <a href="#pillars" class="jump-link" data-section="pillars">Research Pillars</a>
        <a href="#impact" class="jump-link" data-section="impact">Impact Pathway</a>
        <a href="#systems" class="jump-link" data-section="systems">Study Systems</a>
        <a href="#sites" class="jump-link" data-section="sites">Field Sites</a>
      </nav>
    </div>
  </section>

  <!-- Three Pillars -->
  <section id="pillars" class="section bg-surface scroll-mt-20">
    <div class="container">
      <div class="text-center mb-16 scroll-reveal">
        <span class="eyebrow">How We Work</span>
        <h2>Three Research Pillars</h2>
        <p class="lead max-w-3xl mx-auto mt-4">
          Our work is organized around three interconnected approaches that span from fundamental science to applied solutions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {researchPillars.map((pillar, i) => (
          <div class={`pillar-card scroll-reveal stagger-${i + 1}`}>
            <div class="pillar-number">{i + 1}</div>
            <h3 class="text-xl font-bold mb-3">{pillar.title}</h3>
            <p class="text-muted mb-4">{pillar.description}</p>
            <ul class="pillar-list">
              {pillar.topics.map((topic) => (
                <li>{topic}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Impact Pathway -->
  <section id="impact" class="section bg-navy-deep scroll-mt-20">
    <div class="container">
      <div class="text-center mb-12 scroll-reveal">
        <span class="eyebrow text-accent">From Questions to Action</span>
        <h2 class="text-white">Our Impact Pathway</h2>
        <p class="text-white/60 max-w-2xl mx-auto mt-4">
          Research flows through four connected stages, each building on the last to create real-world impact.
        </p>
      </div>

      <div class="pathway-timeline scroll-reveal">
        <div class="pathway-line" aria-hidden="true"></div>

        <div class="pathway-step" data-step="1">
          <div class="pathway-marker">
            <span class="pathway-number">1</span>
          </div>
          <div class="pathway-card">
            <div class="pathway-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="text-white font-bold mb-2">First Principles</h4>
            <p class="text-white/70 text-sm">Fundamental questions about ecosystem dynamics</p>
          </div>
        </div>

        <div class="pathway-step" data-step="2">
          <div class="pathway-marker">
            <span class="pathway-number">2</span>
          </div>
          <div class="pathway-card">
            <div class="pathway-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="text-white font-bold mb-2">Quantitative Models</h4>
            <p class="text-white/70 text-sm">Predictive tools and scenario forecasting</p>
          </div>
        </div>

        <div class="pathway-step" data-step="3">
          <div class="pathway-marker">
            <span class="pathway-number">3</span>
          </div>
          <div class="pathway-card">
            <div class="pathway-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
              </svg>
            </div>
            <h4 class="text-white font-bold mb-2">Reproducible Data</h4>
            <p class="text-white/70 text-sm">Open science and shared datasets</p>
          </div>
        </div>

        <div class="pathway-step" data-step="4">
          <div class="pathway-marker">
            <span class="pathway-number">4</span>
          </div>
          <div class="pathway-card">
            <div class="pathway-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h4 class="text-white font-bold mb-2">Tools & Protocols</h4>
            <p class="text-white/70 text-sm">Practical implementation guides</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Study Systems -->
  <section id="systems" class="section bg-navy-highlight scroll-mt-20">
    <div class="container">
      <div class="text-center mb-12 scroll-reveal">
        <span class="eyebrow">Where We Work</span>
        <h2>Study Systems</h2>
        <p class="lead max-w-2xl mx-auto mt-4">
          Our research focuses on two major marine ecosystems where we conduct long-term field experiments.
        </p>
      </div>

      <div class="space-y-8">
        {studySystems.map((system, i) => (
          <a
            href={`/research/${system.slug}`}
            class={`theme-row group scroll-reveal ${i % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
          >
            <div class="theme-image img-zoom">
              <img src={system.heroImage} alt={system.title} loading="lazy" />
            </div>
            <div class="theme-content">
              <span class="eyebrow">Ecosystem</span>
              <h3 class="text-2xl font-bold mb-3 text-ink group-hover:text-accent">
                {system.title}
              </h3>
              <p class="text-muted mb-4">{system.tagline}</p>
              <span class="inline-flex items-center gap-2 text-accent font-semibold">
                Explore research
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>

    </div>
  </section>

  <!-- Field Sites -->
  <section id="sites" class="section bg-surface scroll-mt-20">
    <div class="container">
      <div class="text-center mb-12 scroll-reveal">
        <span class="eyebrow">Our Locations</span>
        <h2>Field Sites</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="site-card scroll-reveal stagger-1">
          <img src="/images/aerial-view-island-lagoon-barrier-reef.jpeg" alt="Moorea, French Polynesia" class="site-image" loading="lazy" />
          <div class="site-content">
            <h3 class="text-xl font-bold mb-2">Moorea, French Polynesia</h3>
            <p class="text-muted text-sm">
              Our primary coral reef field site, home to long-term experiments on reef recovery,
              mutualist communities, and restoration approaches. Part of the Moorea Coral Reef LTER.
            </p>
          </div>
        </div>

        <div class="site-card scroll-reveal stagger-2">
          <img src="/images/garibaldi-fish-orange-kelp-forest.jpeg" alt="Santa Barbara Channel" class="site-image" loading="lazy" />
          <div class="site-content">
            <h3 class="text-xl font-bold mb-2">Santa Barbara Channel</h3>
            <p class="text-muted text-sm">
              Giant kelp forests along the California coast where we study predator-prey dynamics,
              fisheries interactions, and ecosystem resilience. Part of the Santa Barbara Coastal LTER.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Collaborators CTA -->
  <section class="section bg-navy-deep">
    <div class="container">
      <div class="cta-card scroll-reveal">
        <div class="cta-content">
          <h2 class="text-2xl font-bold mb-4 text-white">Interested in Collaborating?</h2>
          <p class="text-white/70 mb-6">
            We work with researchers, conservation organizations, and communities worldwide.
            If you're interested in partnering on research or applying our findings to your work,
            we'd love to hear from you.
          </p>
          <a href="mailto:astier@ucsb.edu" class="btn btn-primary">
            Get in Touch
          </a>
        </div>
        <div class="cta-image">
          <img
            src="/images/research-team-boats-turquoise-lagoon.webp"
            alt="Research team in the field"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Jump Navigation */
  .jump-link {
    @apply px-4 py-2 rounded-full text-sm font-medium;
    @apply bg-white/10 text-white/80 border border-white/20;
    @apply transition-all duration-200 no-underline;
  }

  .jump-link:hover {
    @apply bg-white/20 text-white border-white/40;
  }

  .jump-link:focus-visible {
    @apply outline-2 outline-offset-2 outline-accent ring-2 ring-accent/50;
  }

  .jump-link.active {
    @apply bg-accent/20 text-accent border-accent/40;
  }

  /* Pillar Cards with equal height */
  .pillar-card {
    @apply bg-surface-card p-6 rounded-xl border border-line;
    @apply transition-all duration-300;
    @apply flex flex-col h-full;
  }

  .pillar-card:hover {
    @apply -translate-y-1 shadow-lg border-accent/30;
  }

  .pillar-number {
    @apply w-10 h-10 rounded-full mb-4;
    @apply bg-accent text-white;
    @apply flex items-center justify-center;
    @apply text-lg font-bold flex-shrink-0;
  }

  .pillar-list {
    @apply space-y-2 text-sm mt-auto;
  }

  .pillar-list li {
    @apply flex items-start gap-2 text-muted;
  }

  .pillar-list li::before {
    content: '';
    @apply w-1.5 h-1.5 rounded-full bg-accent mt-2 flex-shrink-0;
  }

  /* Impact Pathway Timeline */
  .pathway-timeline {
    @apply relative flex flex-col md:flex-row md:justify-between gap-6 md:gap-4;
    @apply max-w-4xl mx-auto;
  }

  .pathway-line {
    @apply absolute bg-gradient-to-b md:bg-gradient-to-r from-accent/20 via-accent to-accent-2/20;
    @apply left-5 top-0 bottom-0 w-0.5 md:w-auto md:h-0.5;
    @apply md:left-0 md:right-0 md:top-8 md:bottom-auto;
  }

  .pathway-step {
    @apply relative flex items-start md:flex-col md:items-center gap-4 md:gap-3;
    @apply flex-1;
  }

  .pathway-marker {
    @apply relative z-10 flex-shrink-0;
  }

  .pathway-number {
    @apply w-10 h-10 rounded-full;
    @apply bg-accent text-white font-bold;
    @apply flex items-center justify-center;
    @apply shadow-lg shadow-accent/30;
    @apply transition-transform duration-300;
  }

  .pathway-step:hover .pathway-number {
    @apply scale-110;
  }

  .pathway-card {
    @apply flex-1 md:text-center p-4 rounded-xl;
    @apply bg-white/5 border border-white/10;
    @apply transition-all duration-300;
  }

  .pathway-step:hover .pathway-card {
    @apply bg-white/10 border-accent/30;
  }

  .pathway-icon {
    @apply w-12 h-12 rounded-xl mb-3 mx-auto hidden md:flex;
    @apply bg-accent/20 text-accent;
    @apply items-center justify-center;
  }

  /* Study System Rows */
  .theme-row {
    @apply flex flex-col md:flex-row gap-6 p-4 rounded-xl;
    @apply bg-surface-card border border-line;
    @apply transition-all duration-300 no-underline;
  }

  .theme-row:hover {
    @apply -translate-y-1 shadow-lg border-accent/30;
  }

  .theme-image {
    @apply w-full md:w-2/5 aspect-[16/10] md:aspect-[4/3] rounded-lg overflow-hidden flex-shrink-0;
  }

  .theme-image img {
    @apply w-full h-full object-cover transition-transform duration-500;
  }

  .theme-row:hover .theme-image img {
    @apply scale-105;
  }

  .theme-content {
    @apply flex flex-col justify-center py-4;
  }

  /* Field Site Cards with proper hover states */
  .site-card {
    @apply bg-surface-card rounded-xl border border-line overflow-hidden;
    @apply transition-all duration-300;
  }

  .site-card:hover {
    @apply -translate-y-2 shadow-xl border-accent/30;
  }

  .site-image {
    @apply w-full aspect-video object-cover transition-transform duration-500;
  }

  .site-card:hover .site-image {
    @apply scale-105;
  }

  .site-content {
    @apply p-5;
  }

  .site-content h3 {
    @apply transition-colors duration-200;
  }

  .site-card:hover .site-content h3 {
    @apply text-accent;
  }

  /* CTA Card */
  .cta-card {
    @apply flex flex-col md:flex-row gap-8 p-8 rounded-xl;
    @apply bg-gradient-to-br from-white/5 to-white/10 border border-white/10;
    @apply transition-all duration-300;
  }

  .cta-card:hover {
    @apply border-accent/30;
  }

  .cta-content {
    @apply flex-1 flex flex-col justify-center;
  }

  .cta-image {
    @apply w-full md:w-2/5 aspect-video rounded-lg overflow-hidden;
  }

  .cta-image img {
    @apply w-full h-full object-cover transition-transform duration-500;
  }

  .cta-card:hover .cta-image img {
    @apply scale-105;
  }

  /* Image loading skeleton */
  .site-card .site-image,
  .theme-image img,
  .cta-image img {
    @apply bg-navy-card;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .pathway-number,
    .pathway-card,
    .site-image,
    .theme-image img,
    .cta-image img {
      transition: none !important;
      transform: none !important;
    }
  }
</style>

<script>
  // Active section indicator for jump navigation
  const initJumpNavHighlight = () => {
    const sections = document.querySelectorAll('section[id]');
    const jumpLinks = document.querySelectorAll('.jump-link[data-section]');

    if (sections.length === 0 || jumpLinks.length === 0) return;

    const observerOptions = {
      rootMargin: '-20% 0px -60% 0px',
      threshold: 0
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;

          jumpLinks.forEach((link) => {
            const linkSection = link.getAttribute('data-section');
            if (linkSection === sectionId) {
              link.classList.add('active');
            } else {
              link.classList.remove('active');
            }
          });
        }
      });
    }, observerOptions);

    sections.forEach((section) => {
      if (section.id) {
        observer.observe(section);
      }
    });

    // Cleanup function
    return () => observer.disconnect();
  };

  // Initialize
  initJumpNavHighlight();

  // Re-init after view transitions
  document.addEventListener('astro:after-swap', initJumpNavHighlight);
</script>
