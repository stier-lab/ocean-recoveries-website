---
import Layout from '@layouts/Layout.astro';
import BreadcrumbSchema from '@components/seo/BreadcrumbSchema.astro';
import { currentTeam, alumni } from '@data/team';

// Sort team by order - PI first, then others
const sortedTeam = [...currentTeam].sort((a, b) => a.order - b.order);
const pi = sortedTeam.find(m => m.role === 'pi');
const teamMembers = sortedTeam.filter(m => m.role !== 'pi');

// Role styling
const roleStyles: Record<string, { gradient: string; icon: string; label: string }> = {
  pi: { gradient: 'from-amber-400 via-orange-400 to-rose-400', icon: '◆', label: 'Principal Investigator' },
  postdoc: { gradient: 'from-teal-400 to-emerald-400', icon: '●', label: 'Postdoctoral Researcher' },
  phd: { gradient: 'from-sky-400 to-blue-500', icon: '●', label: 'PhD Student' },
  manager: { gradient: 'from-violet-400 to-purple-500', icon: '▲', label: 'Lab Manager' },
  undergrad: { gradient: 'from-rose-400 to-pink-400', icon: '○', label: 'Undergraduate Researcher' },
};

// Alumni role colors
const alumniRoleColors: Record<string, string> = {
  'Postdoc': 'teal',
  'PhD': 'sky',
  'MS Student': 'indigo',
  'Lab Manager': 'amber',
  'Undergraduate Researcher': 'rose',
};
---

<Layout
  title="People"
  description="Meet the Ocean Recoveries Lab team - researchers studying coral reef and kelp forest recovery at UC Santa Barbara."
  image="/images/research-team-group-photo-beach.jpeg"
  keywords={['research team', 'marine scientists', 'UCSB researchers', 'ocean ecologists', 'Adrian Stier lab']}
>
  <BreadcrumbSchema items={[{ name: 'People', url: '/people' }]} />

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-pattern"></div>
    </div>

    <div class="container relative z-10">
      <div class="hero-content">
        <span class="hero-eyebrow scroll-reveal">
          <span class="eyebrow-line"></span>
          <span>Ocean Recoveries Lab</span>
          <span class="eyebrow-line"></span>
        </span>

        <h1 class="hero-title scroll-reveal stagger-1">
          <span class="title-line">The Minds</span>
          <span class="title-line title-accent">Behind the Science</span>
        </h1>

        <p class="hero-description scroll-reveal stagger-2">
          A collaborative team of researchers, students, and staff dedicated to understanding how ocean ecosystems recover from disturbance — and how we can help accelerate that recovery.
        </p>

        <div class="hero-stats scroll-reveal stagger-3">
          <div class="stat">
            <span class="stat-number">{currentTeam.length}</span>
            <span class="stat-label">Current Members</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-number">{alumni.length}</span>
            <span class="stat-label">Alumni Network</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-number">2</span>
            <span class="stat-label">Research Sites</span>
          </div>
        </div>
      </div>
    </div>

    <div class="hero-scroll-indicator scroll-reveal stagger-4">
      <span>Meet the team</span>
      <svg class="scroll-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- PI Feature Section -->
  {pi && (
    <section class="pi-section" id="team">
      <div class="container">
        <div class="pi-card scroll-reveal">
          <div class="pi-image-wrapper">
            <img
              src={pi.image}
              alt={`${pi.name} portrait`}
              class="pi-image"
              loading="eager"
              width="600"
              height="720"
            />
            <div class="pi-image-overlay"></div>
            <div class="pi-role-badge">
              <span class="role-icon">{roleStyles[pi.role].icon}</span>
              <span>Principal Investigator</span>
            </div>
          </div>

          <div class="pi-content">
            <div class="pi-header">
              <h2 class="pi-name">{pi.name}</h2>
              <p class="pi-title">{pi.title}</p>
            </div>

            <p class="pi-hook">{pi.hook}</p>

            <div class="pi-tags">
              {pi.tags.map((tag) => (
                <span class="pi-tag">{tag}</span>
              ))}
            </div>

            <div class="pi-links">
              {pi.email && (
                <a href={`mailto:${pi.email}`} class="pi-link" aria-label={`Email ${pi.name}`}>
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                    <polyline points="22,6 12,13 2,6" />
                  </svg>
                  <span>Contact</span>
                </a>
              )}

              {pi.orcid && (
                <a href={`https://orcid.org/${pi.orcid}`} target="_blank" rel="noopener noreferrer" class="pi-link-icon" aria-label="ORCID profile">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z" />
                  </svg>
                </a>
              )}

              {pi.github && (
                <a href={`https://github.com/${pi.github}`} target="_blank" rel="noopener noreferrer" class="pi-link-icon" aria-label="GitHub profile">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </a>
              )}

              {pi.website && (
                <a href={pi.website} target="_blank" rel="noopener noreferrer" class="pi-link-icon" aria-label="Personal website">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <line x1="2" y1="12" x2="22" y2="12" />
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Team Grid Section -->
  <section class="team-section">
    <div class="container">
      <div class="section-header scroll-reveal">
        <h2 class="section-title">Lab Members</h2>
        <p class="section-subtitle">Researchers and students driving our mission forward</p>
      </div>

      <div class="team-grid">
        {teamMembers.map((member, i) => {
          const style = roleStyles[member.role];
          const isPlaceholder = member.image.includes('man-scuba-diver-on-boat') || member.image.includes('placeholder');

          return (
            <article class={`team-card scroll-reveal stagger-${(i % 5) + 1}`}>
              <div class="team-card-inner">
                <div class="team-photo-container">
                  {isPlaceholder ? (
                    <div class="team-photo-placeholder">
                      <span class="placeholder-initial">{member.name.charAt(0)}</span>
                      <div class="placeholder-pattern"></div>
                    </div>
                  ) : (
                    <img
                      src={member.image}
                      alt={`${member.name} portrait`}
                      class="team-photo"
                      loading="lazy"
                      width="400"
                      height="500"
                    />
                  )}
                  <div class="team-photo-overlay"></div>

                  <div class={`team-role-tag bg-gradient-to-r ${style.gradient}`}>
                    <span class="role-icon">{style.icon}</span>
                    <span>{style.label}</span>
                  </div>

                  <div class="team-hover-content">
                    <p class="team-hover-hook">{member.hook}</p>
                    <div class="team-hover-tags">
                      {member.tags.slice(0, 3).map((tag) => (
                        <span class="team-hover-tag">{tag}</span>
                      ))}
                    </div>
                  </div>
                </div>

                <div class="team-info">
                  <h3 class="team-name">{member.name}</h3>
                  <p class="team-title">{member.title}</p>

                  <div class="team-actions">
                    {member.email ? (
                      <a href={`mailto:${member.email}`} class="team-contact-btn" aria-label={`Email ${member.name}`}>
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                          <polyline points="22,6 12,13 2,6" />
                        </svg>
                        <span>Contact</span>
                      </a>
                    ) : (
                      <a href="mailto:astier@ucsb.edu" class="team-contact-btn team-contact-secondary" aria-label={`Contact lab about ${member.name}`}>
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                          <polyline points="22,6 12,13 2,6" />
                        </svg>
                        <span>Contact Lab</span>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Alumni Section -->
  <section class="alumni-section" id="alumni">
    <div class="container">
      <div class="alumni-header scroll-reveal">
        <div class="alumni-header-line"></div>
        <div class="alumni-header-content">
          <span class="alumni-eyebrow">Our Network</span>
          <h2 class="alumni-title">Where Are They Now</h2>
          <p class="alumni-subtitle">Tracing the impact of our alumni across the globe</p>
        </div>
        <div class="alumni-header-line"></div>
      </div>

      <div class="alumni-grid">
        {alumni.map((alum, i) => {
          const roleColor = alumniRoleColors[alum.role] || 'sky';
          return (
            <div class={`alumni-card scroll-reveal stagger-${(i % 6) + 1}`}>
              <div class="alumni-card-inner">
                {alum.image ? (
                  <div class="alumni-photo-wrap">
                    <img src={alum.image} alt={`${alum.name}`} class="alumni-photo" loading="lazy" width="56" height="56" />
                  </div>
                ) : (
                  <div class={`alumni-avatar alumni-avatar-${roleColor}`}>
                    <span class="alumni-initial">{alum.name.charAt(0)}</span>
                  </div>
                )}

                <div class="alumni-info">
                  <h3 class="alumni-name">{alum.name}</h3>
                  <div class="alumni-meta">
                    <span class={`alumni-role-dot alumni-dot-${roleColor}`}></span>
                    <span class="alumni-role-text">{alum.role}</span>
                    <span class="alumni-years">{alum.years}</span>
                  </div>
                  {alum.currentPosition && (
                    <p class="alumni-current">{alum.currentPosition}</p>
                  )}
                </div>

                {alum.linkedin && (
                  <a
                    href={alum.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="alumni-linkedin"
                    aria-label={`${alum.name}'s LinkedIn`}
                  >
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Join CTA Section -->
  <section class="join-section" id="join">
    <div class="join-bg">
      <div class="join-gradient"></div>
      <div class="join-orbs">
        <div class="join-orb join-orb-1"></div>
        <div class="join-orb join-orb-2"></div>
        <div class="join-orb join-orb-3"></div>
      </div>
    </div>

    <div class="container relative z-10">
      <div class="join-content scroll-reveal">
        <span class="join-eyebrow">Get Involved</span>
        <h2 class="join-title">
          Join Our <span class="join-title-accent">Mission</span>
        </h2>
        <p class="join-description">
          We're always looking for curious minds passionate about understanding and restoring ocean ecosystems.
        </p>

        <div class="join-cta-group">
          <a href="/join" class="join-btn-primary">
            <span>View Opportunities</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="mailto:astier@ucsb.edu" class="join-btn-secondary">
            <span>Contact Us</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
     Hero Section
     ============================================ */
  .hero-section {
    @apply relative min-h-[85vh] flex flex-col justify-center overflow-hidden;
    padding-top: 6rem;
    padding-bottom: 3rem;
  }

  .hero-bg {
    @apply absolute inset-0;
  }

  .hero-gradient {
    @apply absolute inset-0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(56, 189, 248, 0.15), transparent),
      radial-gradient(ellipse 60% 40% at 80% 50%, rgba(45, 212, 191, 0.08), transparent),
      linear-gradient(180deg, #0b1929 0%, #0f172a 50%, #0f172a 100%);
  }

  .hero-pattern {
    @apply absolute inset-0 opacity-[0.03];
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2338bdf8' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  .hero-content {
    @apply max-w-3xl;
  }

  .hero-eyebrow {
    @apply flex items-center gap-4 mb-6;
    @apply text-xs font-bold uppercase tracking-[0.2em] text-accent/80;
  }

  .eyebrow-line {
    @apply h-px w-8 bg-gradient-to-r from-transparent to-accent/50;
  }

  .hero-eyebrow .eyebrow-line:last-child {
    @apply bg-gradient-to-l;
  }

  .hero-title {
    @apply text-fluid-5xl font-black leading-[0.95] tracking-tight mb-6;
  }

  .title-line {
    @apply block text-ink;
  }

  .title-accent {
    @apply bg-gradient-to-r from-accent via-accent-2 to-accent bg-clip-text text-transparent;
    background-size: 200% auto;
    animation: shimmer 8s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% center; }
    50% { background-position: 100% center; }
  }

  .hero-description {
    @apply text-lg text-muted leading-relaxed mb-10 max-w-xl;
  }

  .hero-stats {
    @apply flex items-center gap-6 flex-wrap;
  }

  .stat {
    @apply flex flex-col;
  }

  .stat-number {
    @apply text-3xl font-black text-ink tabular-nums;
  }

  .stat-label {
    @apply text-xs font-medium uppercase tracking-wide text-muted-2;
  }

  .stat-divider {
    @apply w-px h-10 bg-line/50;
  }

  .hero-scroll-indicator {
    @apply absolute bottom-8 left-1/2 -translate-x-1/2;
    @apply flex flex-col items-center gap-2;
    @apply text-xs font-medium uppercase tracking-wider text-muted-2;
    animation: float 3s ease-in-out infinite;
  }

  .scroll-arrow {
    @apply w-5 h-5;
  }

  @keyframes float {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(6px); }
  }

  /* ============================================
     PI Feature Section
     ============================================ */
  .pi-section {
    @apply relative py-16 bg-surface;
  }

  .pi-card {
    @apply grid md:grid-cols-2 gap-8 lg:gap-12 items-center;
    @apply bg-surface-card rounded-2xl overflow-hidden;
    @apply border border-line/50;
    @apply transition-all duration-500;
  }

  .pi-card:hover {
    @apply border-line;
    box-shadow: 0 25px 60px -12px rgba(0, 0, 0, 0.5);
  }

  .pi-image-wrapper {
    @apply relative aspect-[4/5] md:aspect-auto md:h-full min-h-[400px];
  }

  .pi-image {
    @apply absolute inset-0 w-full h-full object-cover;
    @apply transition-transform duration-700;
  }

  .pi-card:hover .pi-image {
    @apply scale-105;
  }

  .pi-image-overlay {
    @apply absolute inset-0;
    background: linear-gradient(180deg, transparent 40%, rgba(15, 23, 42, 0.9) 100%);
  }

  .pi-role-badge {
    @apply absolute top-4 left-4 z-10;
    @apply inline-flex items-center gap-2 px-4 py-2;
    @apply bg-gradient-to-r from-amber-400 via-orange-400 to-rose-400;
    @apply text-white text-xs font-bold uppercase tracking-wide;
    @apply rounded-full shadow-lg;
  }

  .role-icon {
    @apply text-[10px];
  }

  .pi-content {
    @apply p-8 md:py-12 md:pr-12;
  }

  .pi-header {
    @apply mb-6;
  }

  .pi-name {
    @apply text-3xl md:text-4xl font-black text-ink tracking-tight mb-2;
  }

  .pi-title {
    @apply text-sm font-bold uppercase tracking-wide text-accent;
  }

  .pi-hook {
    @apply text-muted leading-relaxed mb-6;
  }

  .pi-tags {
    @apply flex flex-wrap gap-2 mb-8;
  }

  .pi-tag {
    @apply px-3 py-1.5 rounded-lg text-sm font-medium;
    @apply bg-accent/10 text-accent border border-accent/20;
  }

  .pi-links {
    @apply flex items-center gap-3;
  }

  .pi-link {
    @apply inline-flex items-center gap-2 px-5 py-2.5;
    @apply text-sm font-semibold text-white;
    @apply bg-accent rounded-lg no-underline;
    @apply transition-all duration-200;
  }

  .pi-link:hover {
    @apply bg-accent/90;
    transform: translateY(-2px);
  }

  .pi-link-icon {
    @apply p-2.5 rounded-lg;
    @apply text-muted border border-line/50 bg-surface;
    @apply transition-all duration-200 no-underline;
  }

  .pi-link-icon:hover {
    @apply text-accent border-accent/50 bg-accent/10;
  }

  /* ============================================
     Team Grid Section
     ============================================ */
  .team-section {
    @apply relative py-20 bg-surface;
  }

  .section-header {
    @apply text-center mb-12;
  }

  .section-title {
    @apply text-3xl font-black text-ink tracking-tight mb-3;
  }

  .section-subtitle {
    @apply text-muted;
  }

  .team-grid {
    @apply grid sm:grid-cols-2 lg:grid-cols-3 gap-6;
  }

  .team-card {
    @apply relative;
  }

  .team-card-inner {
    @apply bg-surface-card rounded-xl overflow-hidden;
    @apply border border-line/50;
    @apply flex flex-col h-full;
    transition: all 400ms ease;
  }

  .team-card:hover .team-card-inner {
    @apply border-line;
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.4);
    transform: translateY(-4px);
  }

  .team-photo-container {
    @apply relative overflow-hidden;
    aspect-ratio: 4 / 5;
  }

  .team-photo {
    @apply absolute inset-0 w-full h-full object-cover;
    transition: transform 600ms ease;
  }

  .team-card:hover .team-photo {
    @apply scale-110;
  }

  .team-photo-overlay {
    @apply absolute inset-0;
    background: linear-gradient(180deg, transparent 30%, rgba(15, 23, 42, 0.95) 100%);
    transition: opacity 400ms ease;
  }

  .team-photo-placeholder {
    @apply absolute inset-0 flex items-center justify-center;
    background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 100%);
  }

  .team-photo-placeholder .placeholder-initial {
    @apply text-6xl font-black text-accent/20;
  }

