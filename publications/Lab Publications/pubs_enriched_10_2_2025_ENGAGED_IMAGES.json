<!-- ===== Renderer (kept separate from the JSON tag) ===== -->
<script>
(function(){
  function run(){
    var statusEl        = document.getElementById('pubsStatus');
    var featuredSection = document.getElementById('featuredSection');
    var inpressSection  = document.getElementById('inpressSection');
    var yearsSection    = document.getElementById('yearsSection');
    var featured        = document.getElementById('featuredGrid');
    var inpress         = document.getElementById('inpressList');
    var years           = document.getElementById('yearsContainer');

    function setStatus(html){ if(statusEl) statusEl.innerHTML = html; }
    function hideStatus(){ if(statusEl) statusEl.style.display='none'; }

    // Read JSON
    var rawNode = document.getElementById('pubs-json');
    if(!rawNode){ setStatus('‚ùå No JSON found.'); return; }

    var rows = [];
    try { rows = JSON.parse(rawNode.textContent || '[]'); }
    catch(e){ setStatus('‚ùå JSON parse error. Ensure valid minified JSON array.'); console.error(e); return; }

    if(!Array.isArray(rows)){ setStatus('‚ùå JSON must be an array.'); return; }
    if(rows.length === 0){ setStatus('‚ö†Ô∏è No items.'); return; }

    // Map to UI model
    function s(v){ return (v==null?'':String(v)).trim(); }
    function splitTags(x){ return s(x).split(/[;,|]/).map(function(t){return t.trim();}).filter(Boolean); }

    var pubs = rows.map(function(r){
      var y = parseInt(r.year,10); y = isFinite(y)?y:0;
      return {
        year: y,
        authors: s(r.authors),
        title: s(r.title),
        outlet: s(r.journal) || s(r.journal_abbrev),
        tags: splitTags(r.theme_tags).concat(splitTags(r.methods_tags)).concat(splitTags(r.keywords)),
        type: s(r.methods_tags) || s(r.project_group) || "article",
        open: /plos|frontiers|royalsociety|mdpi|open|biomed|esajournals/i.test(s(r.doi_url)),
        featured: /^yes|true|1$/i.test(s(r.is_featured)),
        status: s(r.status),
        summary: s(r.plain_summary) || s(r.why_it_matters) || s(r.social_blurb),
        why: s(r.why_it_matters) || s(r.social_blurb),
        doi: s(r.doi_url) || (s(r.doi) ? ('https://doi.org/'+s(r.doi)) : ''),
        pdf: s(r.pdf_link),
        media: s(r.media_links),
        img: s(r.image_url) || s(r.graphical_abstract_url),
        altmetric_badge: s(r.altmetric_badge)
      };
    });

    // Helpers
    function chip(cls,txt){return '<span class="chip '+cls+'">'+txt+'</span>'; }
    function chips(p){
      var out=[];
      if(p.open) out.push(chip('chip--open','Open'));
      if((p.type||'').toLowerCase()==='review') out.push(chip('chip--review','Review'));
      if((p.tags||[]).indexOf('policy')>-1)  out.push(chip('chip--policy','Policy'));
      if((p.tags||[]).indexOf('methods')>-1) out.push(chip('chip--methods','Methods'));
      if((p.tags||[]).indexOf('model')>-1)   out.push(chip('chip--model','Model'));
      return out.join('');
    }
    function links(p){
      var arr=[];
      if(p.pdf)  arr.push('<a href="'+p.pdf+'" target="_blank" rel="noopener">PDF</a>');
      if(p.doi)  arr.push('<a href="'+p.doi+'" target="_blank" rel="noopener">DOI</a>');
      if(p.media)arr.push('<a href="'+p.media+'" target="_blank" rel="noopener">Media</a>');
      return arr.length?'<p class="links">'+arr.join(' ¬∑ ')+'</p>':'';
    }

    // Featured
    var featuredItems = pubs.filter(function(p){ return p.featured && !p.status; }).slice(0,6);
    if(featuredItems.length && featured){
      featured.innerHTML = featuredItems.map(function(p){
        return ''
          + '<article class="card" role="listitem">'
          +   (p.img?'<div class="card__media"><img src="'+p.img+'" alt="'+p.title+' thumbnail" loading="lazy"></div>':'')
          +   '<div class="card__body">'
          +     '<h3 class="card__title">'+p.title+'</h3>'
          +     '<div class="card__meta">'+p.authors+(p.outlet?' ¬∑ <em>'+p.outlet+'</em>':'')+(p.year?' ('+p.year+')':'')+'</div>'
          +     '<div class="chips">'+chips(p)+'</div>'
          +     (p.altmetric_badge||'')
          +     (p.summary?'<p class="muted">'+p.summary+'</p>':'')
          +     links(p)
          +   '</div>'
          + '</article>';
      }).join('');
      featuredSection.hidden = false;
    }

    // In press
    var inpressItems = pubs.filter(function(p){ return (p.status||'').toLowerCase()==='in-press'; });
    if(inpressItems.length && inpress){
      inpress.innerHTML = inpressItems.map(function(p){
        return ''
          + '<li class="pub" role="listitem">'
          +   '<div class="pub__top"><h3 class="pub__title">'+p.title+'</h3><span class="chip chip--impact">In&nbsp;press</span></div>'
          +   '<div class="pub__cite">'+p.authors+(p.year?' ('+p.year+').':'')+(p.outlet?' <em>'+p.outlet+'</em>.':'')+'</div>'
          +   '<div class="pub__badges">'+chips(p)+'</div>'
          +   (p.summary?'<p class="pub__sum">'+p.summary+'</p>':'')
          +   (p.why?'<div class="why"><strong>Why it matters:</strong> '+p.why+'</div>':'')
          +   links(p)
          + '</li>';
      }).join('');
      inpressSection.hidden = false;
    }

    // By year
    if(pubs.length && years){
      var grouped = {};
      pubs.forEach(function(p){ (grouped[p.year]||(grouped[p.year]=[])).push(p); });
      var yearsHTML = Object.keys(grouped).sort(function(a,b){ return Number(b)-Number(a); }).map(function(Y, idx){
        var list = grouped[Y].map(function(p, i){
          var id = 'pub-'+Y+'-'+i;
          return ''
            + '<article class="pub">'
            +   '<div class="pub__top">'
            +     '<h3 class="pub__title"><button class="pub__toggle" aria-expanded="false" aria-controls="'+id+'" type="button">'+p.title+'</button></h3>'
            +     '<div class="pub__badges">'+chips(p)+'</div>'
            +   '</div>'
            +   '<div class="pub__cite">'+p.authors+(Y?' ('+Y+').':'')+(p.outlet?' <em>'+p.outlet+'</em>.':'')+'</div>'
            +   (p.altmetric_badge ? '<div class="pub__altmetric">'+p.altmetric_badge+'</div>' : '')
            +   '<div id="'+id+'" class="pub__more" hidden>'
            +     (p.img?'<div style="margin:.5rem 0"><img src="'+p.img+'" alt="'+p.title+' image" loading="lazy" style="max-width:100%;border-radius:12px;box-shadow:0 6px 18px rgba(11,37,69,.08)"></div>':'')
            +     (p.summary?'<p class="pub__sum">'+p.summary+'</p>':'')
            +     links(p)
            +   '</div>'  
            + '</article>';
        }).join('');

        return ''
          + '<div class="yearBlock">'
          +   '<details '+(idx<4?'open':'')+'>'
          +     '<summary><h3>'+Y+'</h3></summary>'
          +     list
          +   '</details>'
          + '</div>';
      }).join('');
      years.innerHTML = yearsHTML;
      yearsSection.hidden = false;

      years.querySelectorAll('.pub__toggle').forEach(function(btn){
        btn.addEventListener('click', function(){
          var id = btn.getAttribute('aria-controls');
          var tgt = document.getElementById(id);
          var expanded = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!expanded));
          if(tgt) tgt.hidden = expanded;
        });
      });
    }

    setStatus('‚úÖ Loaded '+rows.length+' publications.');
    setTimeout(hideStatus, 1200);
    if (window._altmetric_embed_init) window._altmetric_embed_init();
  }

  if(document.readyState === 'loading'){ document.addEventListener('DOMContentLoaded', run); }
  else { run(); }
})();
</script>
